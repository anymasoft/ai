{
  "name": "video-reader",
  "displayName": "VideoReader - YouTube AI Translator",
  "version": "1.0.0",
  "description": "Clean YouTube video translation extension built with Plasmo",
  "author": "VideoReader Team",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.3"
  },
  "devDependencies": {
    "@types/chrome": "0.0.268",
    "@types/node": "20.14.9",
    "typescript": "5.5.2"
  },
  "manifest": {
    "host_permissions": [
      "https://www.youtube.com/*",
      "http://localhost:5000/*"
    ],
    "permissions": ["storage"],
    "web_accessible_resources": [{
      "resources": ["assets/*"],
      "matches": ["https://www.youtube.com/*"]
    }]
  }
}

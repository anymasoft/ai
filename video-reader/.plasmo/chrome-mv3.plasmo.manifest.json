{
  "icons": {
    "16": "./gen-assets/icon16.plasmo.png",
    "32": "./gen-assets/icon32.plasmo.png",
    "48": "./gen-assets/icon48.plasmo.png",
    "64": "./gen-assets/icon64.plasmo.png",
    "128": "./gen-assets/icon128.plasmo.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "./gen-assets/icon16.plasmo.png",
      "32": "./gen-assets/icon32.plasmo.png",
      "48": "./gen-assets/icon48.plasmo.png",
      "64": "./gen-assets/icon64.plasmo.png",
      "128": "./gen-assets/icon128.plasmo.png"
    }
  },
  "version": "1.0.0",
  "author": "VideoReader Team",
  "name": "VideoReader - YouTube AI Translator",
  "description": "Clean YouTube video translation extension built with Plasmo",
  "background": {
    "service_worker": "./static/background/index.ts"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "..\\src\\contents\\index.ts"
      ],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:5000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}

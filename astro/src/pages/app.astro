---
import AppLayout from '../layouts/AppLayout.astro';
import PromptInput from '../components/PromptInput.astro';
import QuickActions from '../components/QuickActions.astro';
import DurationSelector from '../components/DurationSelector.astro';
import { getUserFromSession } from '../lib/auth';

export const prerender = false;

const sessionToken = Astro.cookies.get('session_token')?.value;
let user = sessionToken ? getUserFromSession(sessionToken) : null;

if (sessionToken && !user) {
  Astro.cookies.set('session_token', '', {
    path: '/',
    sameSite: 'lax',
    secure: import.meta.env.PROD,
    httpOnly: true,
    maxAge: 0,
  });
  user = null;
}

if (!user) {
  return Astro.redirect('/');
}

const userBalance = user.generation_balance || 0;
---

<AppLayout title="Create Video - Beem">
  <div class="w-full h-full flex overflow-hidden" data-user-balance={userBalance}>

    <!-- LEFT SIDEBAR: All controls -->
    <aside class="w-[380px] shrink-0 flex flex-col border-r border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900 overflow-y-auto">
      <div class="flex flex-col gap-5 p-5 flex-1">

        <!-- Upload Zone -->
        <div class="space-y-1.5">
          <label class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Фотография</label>
          <div
            class="relative rounded-xl border-2 border-dashed border-gray-300 dark:border-gray-700
                   bg-white dark:bg-gray-800
                   overflow-hidden cursor-pointer group
                   transition-colors duration-150
                   hover:border-indigo-400 dark:hover:border-indigo-500
                   hover:bg-indigo-50/40 dark:hover:bg-indigo-900/10"
            style="min-height: 200px;"
          >
            <input
              type="file"
              accept="image/jpeg"
              class="absolute inset-0 opacity-0 cursor-pointer z-10"
              id="image-upload"
              title=""
            />

            <!-- Placeholder -->
            <div id="upload-placeholder" class="absolute inset-0 flex flex-col items-center justify-center gap-3 pointer-events-none">
              <div class="w-12 h-12 rounded-xl bg-gray-100 dark:bg-gray-700 flex items-center justify-center group-hover:bg-indigo-100 dark:group-hover:bg-indigo-900/30 transition-colors duration-150">
                <svg class="w-6 h-6 text-gray-400 group-hover:text-indigo-500 transition-colors duration-150" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="text-center">
                <p class="text-sm font-medium text-gray-700 dark:text-gray-300">Загрузите фото</p>
                <p class="text-xs text-gray-400 dark:text-gray-500 mt-0.5">JPG · Перетащите или нажмите</p>
              </div>
            </div>

            <!-- Image Preview -->
            <img
              id="image-preview"
              class="hidden absolute inset-0 w-full h-full object-contain"
              alt="Preview"
            />

            <!-- Change photo overlay (shown on hover when image is loaded) -->
            <div id="image-change-overlay" class="hidden absolute inset-0 bg-black/40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-150 pointer-events-none z-20">
              <span class="text-white text-xs font-medium bg-black/60 px-2.5 py-1 rounded-full">Заменить фото</span>
            </div>
          </div>
        </div>

        <!-- Mode Selector -->
        <QuickActions />

        <!-- Duration Selector -->
        <DurationSelector />

        <!-- Prompt Input -->
        <PromptInput />

        <!-- Spacer -->
        <div class="flex-1"></div>

        <!-- Generate Button -->
        <div class="space-y-2">
          <button
            id="generate-btn"
            disabled
            class="w-full h-12 rounded-xl
                   bg-indigo-600 hover:bg-indigo-700
                   text-white font-semibold text-sm
                   transition-colors duration-150
                   disabled:opacity-40 disabled:cursor-not-allowed
                   flex items-center justify-center gap-2
                   shadow-sm cursor-pointer"
          >
            <svg id="generate-icon" class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <svg id="generate-spinner" class="hidden w-4 h-4 animate-spin shrink-0" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Создать видео
          </button>
          <p class="text-xs text-center text-gray-400 dark:text-gray-600">
            6 сек = 1 кредит · 10 сек = 2 кредита
          </p>
        </div>

      </div>
    </aside>

    <!-- RIGHT: Video Stage -->
    <div class="flex-1 overflow-hidden" id="video-section">
      <div class="h-full bg-gray-950 dark:bg-gray-950 flex items-center justify-center relative">

        <!-- Video Placeholder (before generation) -->
        <div id="video-placeholder" class="text-center space-y-4 px-8">
          <div class="w-20 h-20 mx-auto rounded-2xl bg-gray-900 border border-gray-800 flex items-center justify-center">
            <svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div>
            <p class="text-gray-400 font-medium text-sm">Здесь появится ваше видео</p>
            <p class="text-gray-600 text-xs mt-1">Загрузите фото и нажмите «Создать видео»</p>
          </div>
        </div>

        <!-- Loading State (during generation) -->
        <div id="video-loading" class="hidden text-center space-y-5 px-8">
          <div class="flex justify-center">
            <div class="w-12 h-12 rounded-full border-2 border-gray-800 border-t-indigo-500 animate-spin"></div>
          </div>
          <div>
            <p class="text-gray-300 font-medium text-sm">Создаём видео</p>
            <p class="text-gray-600 text-xs mt-1">Обычно занимает 1–2 минуты</p>
          </div>
        </div>

        <!-- Video Player (after generation) -->
        <video
          id="video-output"
          class="hidden w-full h-full object-contain"
          controls
          controlsList="nodownload"
        >
          Your browser does not support the video tag.
        </video>

        <!-- Paywall Overlay -->
        <div id="player-paywall" class="hidden absolute inset-0 flex flex-col items-center justify-center bg-gray-950/95 backdrop-blur-sm z-20">
          <div class="text-center space-y-4 px-8 max-w-sm">
            <div class="w-14 h-14 mx-auto rounded-2xl bg-red-500/10 border border-red-500/20 flex items-center justify-center">
              <svg class="w-7 h-7 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <div>
              <p class="text-white font-semibold">Недостаточно кредитов</p>
              <p class="text-gray-400 text-sm mt-1">Пополните баланс, чтобы создавать видео</p>
            </div>
            <button id="paywall-topup" class="px-5 py-2.5 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold transition-colors duration-150">
              Пополнить баланс
            </button>
          </div>
        </div>

        <!-- Video Controls: Download + Clear (top right, hidden until video ready) -->
        <div id="video-controls" class="hidden absolute top-4 right-4 flex gap-2 z-20">
          <button
            id="download-btn"
            title="Скачать видео"
            class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-gray-900/80 hover:bg-gray-800 border border-gray-700 text-gray-200 text-xs font-medium transition-colors duration-150 backdrop-blur-sm cursor-pointer"
          >
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
            Скачать
          </button>
          <button
            id="clear-btn"
            title="Очистить"
            class="flex items-center justify-center w-7 h-7 rounded-lg bg-gray-900/80 hover:bg-gray-800 border border-gray-700 text-gray-400 hover:text-gray-200 transition-colors duration-150 backdrop-blur-sm cursor-pointer"
          >
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

      </div>
    </div>

  </div>
</AppLayout>

<script>
    // ========== Get User Balance ==========
    const mainContainer = document.querySelector('[data-user-balance]') as HTMLElement;
    const userBalance = parseInt(mainContainer?.dataset.userBalance || '0', 10);

    // ========== Track successful auth ==========
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('auth') === '1') {
        window.beemGoal("auth_success");
        window.history.replaceState({}, document.title, '/app');
    }

    // ========== Toast Notification System ==========
    function showToast(message: string, type: 'error' | 'success' = 'error') {
        const toast = document.createElement('div');
        toast.className = `fixed top-4 right-4 px-4 py-3 rounded-lg shadow-lg z-50 text-sm font-medium ${
            type === 'error'
                ? 'bg-red-500 text-white'
                : 'bg-green-500 text-white'
        }`;
        toast.textContent = message;
        document.body.appendChild(toast);

        setTimeout(() => {
            toast.style.opacity = '0';
            toast.style.transition = 'opacity 0.3s ease';
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // ========== Paywall Overlay ==========
    function showPaywallOverlay() {
        const paywall = document.getElementById('player-paywall') as HTMLElement;
        if (!paywall) return;
        paywall.classList.remove('hidden');
        window.beemGoal("paywall_shown");

        setTimeout(() => {
            paywall.classList.add('hidden');
        }, 4000);
    }

    const paywallTopupBtn = document.getElementById('paywall-topup') as HTMLButtonElement;
    if (paywallTopupBtn) {
        paywallTopupBtn.addEventListener('click', () => {
            window.location.href = '/billing';
        });
    }

    // ========== Element Refs ==========
    const generateBtn = document.getElementById('generate-btn') as HTMLButtonElement;
    const generateIcon = document.getElementById('generate-icon') as HTMLElement;
    const generateSpinner = document.getElementById('generate-spinner') as HTMLElement;
    const promptTextarea = document.getElementById('prompt') as HTMLTextAreaElement;
    const imageUpload = document.getElementById('image-upload') as HTMLInputElement;
    const imagePreview = document.getElementById('image-preview') as HTMLImageElement;
    const uploadPlaceholder = document.getElementById('upload-placeholder') as HTMLElement;
    const imageChangeOverlay = document.getElementById('image-change-overlay') as HTMLElement;
    const videoPlaceholder = document.getElementById('video-placeholder') as HTMLElement;
    const videoLoading = document.getElementById('video-loading') as HTMLElement;
    const videoOutput = document.getElementById('video-output') as HTMLVideoElement;
    const videoControls = document.getElementById('video-controls') as HTMLElement;
    const downloadBtn = document.getElementById('download-btn') as HTMLButtonElement;
    const clearBtn = document.getElementById('clear-btn') as HTMLButtonElement;

    let selectedDuration: string | null = null;
    let selectedImage: File | null = null;
    let selectedMode: 'template' | 'prompt' = 'template';

    // ========== Validation and Button State ==========
    function updateGenerateButtonState() {
        const hasPrompt = promptTextarea?.value.trim().length > 0;
        const hasDuration = selectedDuration !== null;
        const hasImage = selectedImage !== null;

        if (generateBtn) {
            generateBtn.disabled = !(hasPrompt && hasDuration && hasImage);
        }
    }

    // ========== Prompt input changes ==========
    if (promptTextarea) {
        promptTextarea.addEventListener('input', () => {
            if (promptTextarea.value.length > 500) {
                promptTextarea.value = promptTextarea.value.substring(0, 500);
            }
            updateGenerateButtonState();
        });
    }

    // ========== Duration Selection ==========
    window.addEventListener('durationChanged', ((e: CustomEvent) => {
        selectedDuration = e.detail.duration;
        updateGenerateButtonState();
    }) as EventListener);

    // ========== Mode Selection ==========
    const modePlaceholders = {
        template: 'Красивая девушка с наушниками, стильный продукт, модный образ, для карточки WB',
        prompt: 'Девушка идёт вперёд, поворачивается к камере, улыбается, снимает наушники, плавное движение камеры'
    };

    window.addEventListener('modeChanged', ((e: CustomEvent) => {
        selectedMode = e.detail.mode;
        if (promptTextarea) {
            promptTextarea.placeholder = modePlaceholders[selectedMode as 'template' | 'prompt'] || '';
        }
    }) as EventListener);

    // Set initial placeholder
    if (promptTextarea) {
        promptTextarea.placeholder = modePlaceholders['template'];
    }

    // ========== Image Upload ==========
    async function uploadImageToServer(file: File): Promise<boolean> {
        try {
            const formData = new FormData();
            formData.append('image', file);

            const response = await fetch('/api/upload-image', {
                method: 'POST',
                body: formData,
            });

            const data = await response.json();

            if (!response.ok) {
                showToast(data.error || 'Ошибка при загрузке изображения', 'error');
                return false;
            }

            window.beemGoal("image_upload_success");
            return true;
        } catch (error) {
            const errorMessage = error instanceof Error ? error.message : 'Unknown error';
            showToast(`Ошибка: ${errorMessage}`, 'error');
            return false;
        }
    }

    if (imageUpload) {
        imageUpload.addEventListener('change', async (e) => {
            const file = (e.target as HTMLInputElement).files?.[0];
            if (file) {
                if (!file.type.startsWith('image/jpeg')) {
                    showToast('Разрешены только JPEG изображения', 'error');
                    imageUpload.value = '';
                    return;
                }

                const uploadSuccess = await uploadImageToServer(file);
                if (!uploadSuccess) {
                    imageUpload.value = '';
                    return;
                }

                selectedImage = file;
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target?.result as string;
                    imagePreview.classList.remove('hidden');
                    uploadPlaceholder.classList.add('hidden');
                    if (imageChangeOverlay) imageChangeOverlay.classList.remove('hidden');
                    updateGenerateButtonState();
                };
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop support
        const uploadArea = imageUpload.parentElement as HTMLElement;
        if (uploadArea) {
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('border-indigo-400', 'bg-indigo-50/40', 'dark:bg-indigo-900/10');
                uploadArea.classList.remove('border-gray-300', 'dark:border-gray-700');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('border-indigo-400', 'bg-indigo-50/40', 'dark:bg-indigo-900/10');
                uploadArea.classList.add('border-gray-300', 'dark:border-gray-700');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('border-indigo-400', 'bg-indigo-50/40', 'dark:bg-indigo-900/10');
                uploadArea.classList.add('border-gray-300', 'dark:border-gray-700');
                const files = e.dataTransfer?.files;
                if (files && files[0]) {
                    imageUpload.files = files;
                    const event = new Event('change', { bubbles: true });
                    imageUpload.dispatchEvent(event);
                }
            });
        }
    }

    // ========== Generate Button ==========
    if (generateBtn) {
        generateBtn.addEventListener('click', async () => {
            if (!selectedImage || !selectedDuration || !promptTextarea?.value) {
                return;
            }

            // Check balance
            if (userBalance <= 0) {
                showPaywallOverlay();
                return;
            }

            // Reset video area
            videoOutput.classList.add('hidden');
            videoControls.classList.add('hidden');
            videoOutput.src = '';

            // Show loading state
            generateBtn.disabled = true;
            generateIcon.classList.add('hidden');
            generateSpinner.classList.remove('hidden');
            videoPlaceholder.classList.add('hidden');
            videoLoading.classList.remove('hidden');

            try {
                const response = await fetch('/api/generate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        prompt: promptTextarea.value,
                        duration: parseInt(selectedDuration || '6', 10),
                        mode: selectedMode,
                    }),
                });

                const data = await response.json();

                if (!response.ok) {
                    videoLoading.classList.add('hidden');
                    videoPlaceholder.classList.remove('hidden');
                    generateIcon.classList.remove('hidden');
                    generateSpinner.classList.add('hidden');
                    generateBtn.disabled = false;

                    const errorMsg = data.error || 'Ошибка при генерации видео';
                    const isBalanceError = errorMsg.toLowerCase().includes('баланс') ||
                                          errorMsg.toLowerCase().includes('кредит') ||
                                          errorMsg.toLowerCase().includes('недостаточно');

                    if (isBalanceError) {
                        showPaywallOverlay();
                    } else {
                        showToast(errorMsg, 'error');
                    }
                    return;
                }

                const generationId = data.generationId;

                // Poll for completion
                let generationComplete = false;
                let videoUrl: string | null = null;
                let checkAttempts = 0;
                const maxAttempts = 300;

                while (!generationComplete && checkAttempts < maxAttempts) {
                    await new Promise(resolve => setTimeout(resolve, 1000));
                    checkAttempts++;

                    try {
                        const statusResponse = await fetch(`/api/generate?generationId=${generationId}`);
                        const statusData = await statusResponse.json();

                        if (statusData.status === 'success' && statusData.charged) {
                            generationComplete = true;
                            videoUrl = statusData.videoUrl;
                            window.beemGoal("generation_success");
                        } else if (statusData.status === 'failed') {
                            throw new Error('Генерация видео не удалась');
                        }
                    } catch (error) {
                        if (!(error instanceof Error && error.message.includes('не удалась'))) {
                            console.error('[APP] Error checking status:', error);
                        } else {
                            throw error;
                        }
                    }
                }

                if (!generationComplete || !videoUrl) {
                    throw new Error('Время ожидания генерации истекло. Видео может быть готово позже.');
                }

                // Show video
                videoLoading.classList.add('hidden');
                videoOutput.src = videoUrl;
                videoOutput.classList.remove('hidden');
                videoControls.classList.remove('hidden');
                (downloadBtn as any).videoUrl = videoUrl;

            } catch (error) {
                const errorMessage = error instanceof Error ? error.message : 'Неизвестная ошибка';

                videoLoading.classList.add('hidden');
                const isBalanceError = errorMessage.toLowerCase().includes('баланс') ||
                                      errorMessage.toLowerCase().includes('кредит') ||
                                      errorMessage.toLowerCase().includes('недостаточно');

                if (isBalanceError) {
                    showPaywallOverlay();
                } else {
                    videoPlaceholder.classList.remove('hidden');
                    showToast(`Ошибка: ${errorMessage}`, 'error');
                }
            } finally {
                generateIcon.classList.remove('hidden');
                generateSpinner.classList.add('hidden');
                generateBtn.disabled = false;
                updateGenerateButtonState();
            }
        });
    }

    // ========== Download Button ==========
    if (downloadBtn) {
        downloadBtn.addEventListener('click', () => {
            const videoUrl = (downloadBtn as any).videoUrl || '/videos/output.mp4';
            const link = document.createElement('a');
            link.href = videoUrl;
            link.download = 'beem-video.mp4';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        });
    }

    // ========== Clear Button ==========
    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            videoOutput.classList.add('hidden');
            videoControls.classList.add('hidden');
            videoPlaceholder.classList.remove('hidden');
            videoOutput.src = '';

            imagePreview.classList.add('hidden');
            imagePreview.src = '';
            uploadPlaceholder.classList.remove('hidden');
            if (imageChangeOverlay) imageChangeOverlay.classList.add('hidden');

            selectedImage = null;
            imageUpload.value = '';
            updateGenerateButtonState();
        });
    }

    // ========== Auto-select 6s on load ==========
    const firstDurationBtn = document.querySelector('[data-duration="6"]') as HTMLButtonElement;
    if (firstDurationBtn) {
        firstDurationBtn.click();
    }

    // Init button state
    updateGenerateButtonState();
</script>

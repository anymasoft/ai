---
import AppLayout from '../layouts/AppLayout.astro';
---

<AppLayout title="Create Video - Video Reader AI">
    <!-- Main Container - No scroll, fixed 100vh -->
    <div class="w-full h-full flex flex-col overflow-hidden">
        <!-- Content Area - flex-1 to fill remaining height -->
        <div class="flex-1 overflow-hidden">
            <!-- Grid: LEFT (upload) + RIGHT (video stage) -->
            <div class="h-full p-4 flex gap-4">

                <!-- LEFT COLUMN: Upload Image (FIXED WIDTH) -->
                <div class="flex-shrink-0 w-80">
                    <div class="h-full border border-gray-100 dark:border-gray-700 rounded-3xl p-4 bg-white dark:bg-gray-800 flex flex-col overflow-hidden">

                        <!-- Upload Canvas - aspect-ratio 3/4 -->
                        <div class="relative border-2 border-dashed border-gray-200 dark:border-gray-600 rounded-2xl overflow-hidden hover:border-primary transition cursor-pointer group flex-1 flex items-center justify-center bg-gray-50 dark:bg-gray-900">

                            <input
                                type="file"
                                accept="image/*"
                                class="absolute inset-0 opacity-0 cursor-pointer z-10"
                                id="image-upload"
                            />

                            <!-- Placeholder -->
                            <div id="upload-placeholder" class="space-y-3 text-center pointer-events-none">
                                <svg class="w-8 h-8 mx-auto text-gray-400 group-hover:text-primary transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                <div>
                                    <p class="text-xs font-medium text-gray-700 dark:text-gray-300">Drag image here</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">or click to select</p>
                                </div>
                            </div>

                            <!-- Image Preview -->
                            <img
                                id="image-preview"
                                class="hidden absolute inset-0 w-full h-full object-contain"
                                alt="Preview"
                            />
                        </div>
                    </div>
                </div>

                <!-- RIGHT COLUMN: Video Stage (FILLS REMAINING SPACE) -->
                <div class="flex-1 overflow-hidden">
                    <div class="h-full border border-gray-100 dark:border-gray-700 rounded-3xl overflow-hidden bg-white dark:bg-gray-800 flex flex-col relative">

                        <!-- Video Area - flex-1 to fill space -->
                        <div class="flex-1 bg-gradient-to-br from-gray-100 to-gray-50 dark:from-gray-800 dark:to-gray-900 flex items-center justify-center relative overflow-hidden">

                            <!-- Video Player / Placeholder -->
                            <div id="video-player" class="text-center space-y-4">
                                <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <p class="text-gray-500 dark:text-gray-400 text-sm">Generate your video</p>
                            </div>

                            <!-- Download Button - Top Right (hidden until generation) -->
                            <button
                                id="download-btn"
                                class="hidden absolute top-4 right-4 p-2.5 rounded-full bg-white dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-600 transition shadow-lg z-20"
                                title="Download"
                            >
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                </svg>
                            </button>

                            <!-- PROMPT BAR - Floating Control Panel (CENTERED, BOTTOM) -->
                            <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-30 pointer-events-none px-4 w-full" style="max-width: 60%">

                                <!-- Input Container (Full Width Minus Padding) -->
                                <div class="pointer-events-auto relative">

                                    <!-- Input + Buttons Inside -->
                                    <div class="relative">
                                        <textarea
                                            id="prompt"
                                            placeholder="Describe your video..."
                                            class="w-full px-16 py-3 border border-gray-200 dark:border-gray-600 rounded-2xl bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-primary focus:border-transparent focus:outline-none transition duration-200 resize-none text-sm shadow-lg"
                                            rows="2"
                                        ></textarea>

                                        <!-- Duration Buttons - INSIDE textarea (LEFT BOTTOM) -->
                                        <div class="absolute left-3 bottom-2 flex flex-col gap-1 pointer-events-auto">
                                            <button
                                                type="button"
                                                data-duration="6"
                                                class="duration-btn px-2.5 py-1 rounded-full text-xs font-semibold border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:border-primary hover:text-primary transition shadow-sm hover:shadow-md active:scale-95 duration-150"
                                            >
                                                6s
                                            </button>
                                            <button
                                                type="button"
                                                data-duration="10"
                                                class="duration-btn px-2.5 py-1 rounded-full text-xs font-semibold border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:border-primary hover:text-primary transition shadow-sm hover:shadow-md active:scale-95 duration-150"
                                            >
                                                10s
                                            </button>
                                        </div>

                                        <!-- Generate Button - INSIDE Input (RIGHT) -->
                                        <button
                                            id="generate-btn"
                                            class="absolute right-3 top-1/2 -translate-y-1/2 p-2.5 hover:opacity-80 active:scale-95 transition-all duration-150 flex-shrink-0"
                                            title="Generate"
                                        >
                                            <img src="/generate.png" alt="Generate" class="w-8 h-8" />
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</AppLayout>

<script>
    // ========== Character Counter ==========
    const promptInput = document.getElementById('prompt') as HTMLTextAreaElement;

    if (promptInput) {
        promptInput.addEventListener('input', () => {
            const count = promptInput.value.length;

            // Truncate if over 500
            if (count > 500) {
                promptInput.value = promptInput.value.substring(0, 500);
            }
        });
    }

    // ========== Duration Selection ==========
    const durationBtns = document.querySelectorAll('.duration-btn') as NodeListOf<HTMLButtonElement>;
    let selectedDuration: string | null = null;

    durationBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Remove active state from all buttons
            durationBtns.forEach(b => {
                b.classList.remove('bg-primary', 'text-white', 'border-primary');
                b.classList.add('border-gray-300', 'dark:border-gray-600', 'text-gray-700', 'dark:text-gray-300', 'bg-white', 'dark:bg-gray-800');
            });

            // Add active state to clicked button
            btn.classList.remove('border-gray-300', 'dark:border-gray-600', 'text-gray-700', 'dark:text-gray-300', 'bg-white', 'dark:bg-gray-800');
            btn.classList.add('bg-primary', 'text-white', 'border-primary');
            selectedDuration = btn.dataset.duration || null;
        });
    });

    // ========== Image Upload ==========
    const imageUpload = document.getElementById('image-upload') as HTMLInputElement;
    const imagePreview = document.getElementById('image-preview') as HTMLImageElement;
    const uploadPlaceholder = document.getElementById('upload-placeholder') as HTMLElement;

    if (imageUpload) {
        imageUpload.addEventListener('change', (e) => {
            const file = (e.target as HTMLInputElement).files?.[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target?.result as string;
                    imagePreview.classList.remove('hidden');
                    uploadPlaceholder.classList.add('hidden');
                };
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop support
        const uploadArea = imageUpload.parentElement as HTMLElement;
        if (uploadArea) {
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
                const files = e.dataTransfer?.files;
                if (files && files[0]) {
                    imageUpload.files = files;
                    const event = new Event('change', { bubbles: true });
                    imageUpload.dispatchEvent(event);
                }
            });
        }
    }

    // ========== Generate Button ==========
    const generateBtn = document.getElementById('generate-btn') as HTMLButtonElement;
    const videoPlayer = document.getElementById('video-player') as HTMLElement;
    const downloadBtn = document.getElementById('download-btn') as HTMLButtonElement;

    if (generateBtn) {
        generateBtn.addEventListener('click', () => {
            const hasImage = imagePreview && !imagePreview.classList.contains('hidden');
            const hasPrompt = promptInput && promptInput.value.trim().length > 0;
            const hasDuration = selectedDuration !== null;

            if (hasImage && hasPrompt && hasDuration) {
                // Hide placeholder and show download button
                videoPlayer.classList.add('hidden');
                downloadBtn.classList.remove('hidden');

                // Simulate video generation
                setTimeout(() => {
                    if (videoPlayer.classList.contains('hidden')) {
                        videoPlayer.innerHTML = '<video class="w-full h-full object-contain" controls><source src="" type="video/mp4">Your browser does not support the video tag.</video>';
                    }
                }, 500);
            } else {
                // Provide feedback about missing fields
                let missingFields = [];
                if (!hasImage) missingFields.push('image');
                if (!hasPrompt) missingFields.push('prompt');
                if (!hasDuration) missingFields.push('duration');
                alert(`Please fill: ${missingFields.join(', ')}`);
            }
        });
    }

    // ========== Download Button ==========
    if (downloadBtn) {
        downloadBtn.addEventListener('click', () => {
            alert('Download functionality coming soon!');
        });
    }
</script>

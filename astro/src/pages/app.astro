---
import AppLayout from '../layouts/AppLayout.astro';
import PromptInput from '../components/PromptInput.astro';
import QuickActions from '../components/QuickActions.astro';
import DurationSelector from '../components/DurationSelector.astro';
import { getUserFromSession } from '../lib/auth';

// –≠—Ç–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–∞ –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –¥–∏–Ω–∞–º–∏—á–Ω–æ–π –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å middleware –∏ cookies
export const prerender = false;

// –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—É—â–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∏–∑ —Å–µ—Å—Å–∏–∏
const sessionToken = Astro.cookies.get('session_token')?.value;
let user = sessionToken ? getUserFromSession(sessionToken) : null;

// –ò–°–ü–†–ê–í–õ–ï–ù–ò–ï: –ï—Å–ª–∏ cookie —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –Ω–æ —Å–µ—Å—Å–∏–∏ –Ω–µ—Ç –≤ –ë–î ‚Üí —É–¥–∞–ª–∏—Ç—å cookie
if (sessionToken && !user) {
  console.log(`\n‚ö†Ô∏è APP: Cookie —Å—É—â–µ—Å—Ç–≤—É–µ—Ç, –Ω–æ —Å–µ—Å—Å–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞ –≤ –ë–î`);
  console.log(`   - –£–¥–∞–ª—è–µ–º "–∑–∞–ª–∏–ø—à—É—é" cookie`);

  // –ü—Ä–∞–≤–∏–ª—å–Ω–æ–µ —É–¥–∞–ª–µ–Ω–∏–µ cookie —Å –¢–ï–ú–ò –ñ–ï –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
  Astro.cookies.set('session_token', '', {
    path: '/',
    sameSite: 'lax',
    secure: import.meta.env.PROD,
    httpOnly: true,
    maxAge: 0,
  });

  console.log(`   ‚úÖ Cookie –æ—á–∏—â–µ–Ω–∞ (maxAge=0)`);
  user = null;
}

// –ï—Å–ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω, —Ä–µ–¥–∏—Ä–µ–∫—Ç–∏–º –Ω–∞ –≥–ª–∞–≤–Ω—É—é
if (!user) {
  return Astro.redirect('/');
}

const userBalance = user.generation_balance || 0;
---

<AppLayout title="Create Video - Beem">
    <!-- Main Container - No scroll, fixed 100vh -->
    <div class="w-full h-full flex flex-col overflow-hidden" data-user-balance={userBalance}>
        <!-- Content Area - flex-1 to fill remaining height -->
        <div class="flex-1 overflow-hidden">
            <!-- Grid: LEFT (upload) + RIGHT (video stage) -->

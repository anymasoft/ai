---
import AppLayout from '../layouts/AppLayout.astro';
import { getUserFromSession } from '../lib/auth';

// Эта страница должна быть динамичной для работы с middleware и cookies
export const prerender = false;

// Получаем текущего пользователя из сессии
const sessionToken = Astro.cookies.get('session_token')?.value;
const user = sessionToken ? getUserFromSession(sessionToken) : null;

// Если пользователь не авторизован, редиректим на главную
if (!user) {
  return Astro.redirect('/');
}

const userBalance = user.generation_balance || 0;
---

<AppLayout title="Create Video - Beem">
    <!-- Main Container - No scroll, fixed 100vh -->
    <div class="w-full h-full flex flex-col overflow-hidden" data-user-balance={userBalance}>
        <!-- Content Area - flex-1 to fill remaining height -->
        <div class="flex-1 overflow-hidden">
            <!-- Grid: LEFT (upload) + RIGHT (video stage) -->
            <div class="h-full p-4 flex gap-4">

                <!-- LEFT COLUMN: Upload Image + Duration (FIXED WIDTH) -->
                <div class="flex-shrink-0 w-80">
                    <div class="h-full border border-gray-100 dark:border-gray-700 rounded-3xl p-4 bg-white dark:bg-gray-800 flex flex-col overflow-hidden gap-3">

                        <!-- Upload Canvas - flex-1 to fill available space -->
                        <div class="relative border-2 border-dashed border-gray-200 dark:border-gray-600 rounded-2xl overflow-hidden hover:border-primary transition cursor-pointer group flex-1 flex items-center justify-center bg-gray-50 dark:bg-gray-900">

                            <input
                                type="file"
                                accept="image/*"
                                class="absolute inset-0 opacity-0 cursor-pointer z-10"
                                id="image-upload"
                                title=""
                            />

                            <!-- Placeholder -->
                            <div id="upload-placeholder" class="space-y-3 text-center pointer-events-none">
                                <svg class="w-8 h-8 mx-auto text-gray-400 group-hover:text-primary transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                <div>
                                    <p class="text-xs font-medium text-gray-700 dark:text-gray-300">Перетащите фото сюда</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">или нажмите, чтобы выбрать</p>
                                </div>
                            </div>

                            <!-- Image Preview -->
                            <img
                                id="image-preview"
                                class="hidden absolute inset-0 w-full h-full object-contain"
                                alt="Preview"
                            />
                        </div>

                        <!-- Duration Buttons - Horizontal Layout (flex-shrink-0 to maintain size) -->
                        <div class="flex gap-2 justify-center flex-shrink-0">
                            <button
                                type="button"
                                data-duration="6"
                                class="duration-btn flex-1 px-3 py-2 rounded-full text-xs font-semibold border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:border-primary hover:bg-primary/5 transition shadow-sm hover:shadow-md active:scale-95 duration-150"
                            >
                                6s (1 кредит)
                            </button>
                            <button
                                type="button"
                                data-duration="10"
                                class="duration-btn flex-1 px-3 py-2 rounded-full text-xs font-semibold border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:border-primary hover:bg-primary/5 transition shadow-sm hover:shadow-md active:scale-95 duration-150"
                            >
                                10s (2 кредита)
                            </button>
                        </div>
                    </div>
                </div>

                <!-- RIGHT COLUMN: Video Stage (FILLS REMAINING SPACE) -->
                <div class="flex-1 overflow-hidden">
                    <div class="h-full border border-gray-100 dark:border-gray-700 rounded-3xl overflow-hidden bg-white dark:bg-gray-800 flex flex-col relative">

                        <!-- Video Area - flex-1 to fill space -->
                        <div class="flex-1 bg-gradient-to-br from-gray-100 to-gray-50 dark:from-gray-800 dark:to-gray-900 flex items-center justify-center relative overflow-hidden">

                            <!-- Video Placeholder (shown before generation) -->
                            <div id="video-placeholder" class="text-center space-y-4">
                                <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <p class="text-gray-500 dark:text-gray-400 text-sm">Создайте видео</p>
                            </div>

                            <!-- Loading Spinner (shown during generation) -->
                            <div id="video-loading" class="hidden text-center space-y-4">
                                <div class="flex justify-center">
                                    <div class="animate-spin rounded-full h-12 w-12 border-4 border-gray-200 dark:border-gray-700 border-t-primary"></div>
                                </div>
                                <p class="text-gray-500 dark:text-gray-400 text-sm">Создаём видео...</p>
                            </div>

                            <!-- Video Player (shown after generation) -->
                            <video
                                id="video-output"
                                class="hidden w-full h-full object-contain"
                                controls
                                controlsList="nodownload"
                            >
                                <source src="/demo.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>

                            <!-- Paywall Overlay (shown when balance is insufficient) -->
                            <div id="player-paywall" class="hidden absolute inset-0 flex flex-col items-center justify-center bg-white/95 dark:bg-gray-900/95 backdrop-blur-sm z-20">
                                <p class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Недостаточно кредитов</p>
                                <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">
                                    Чтобы создать видео, пополните баланс
                                </p>
                                <button id="paywall-topup" class="px-6 py-3 rounded-xl bg-primary text-white text-base font-semibold hover:bg-primary/90 transition shadow-lg">
                                    Пополнить баланс
                                </button>
                            </div>

                            <!-- Download & Clear Buttons - Top Right (hidden until generation) -->
                            <div id="video-controls" class="hidden absolute top-4 right-4 flex gap-2 z-20">
                                <!-- Download Button -->
                                <button
                                    id="download-btn"
                                    class="p-2.5 rounded-full bg-white dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-600 transition shadow-lg cursor-pointer"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                    </svg>
                                </button>

                                <!-- Clear Button -->
                                <button
                                    id="clear-btn"
                                    class="p-2.5 rounded-full bg-white dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-600 transition shadow-lg cursor-pointer"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                            </div>

                            <!-- PROMPT BAR - Floating Control Panel (CENTERED, BOTTOM) -->
                            <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-30 pointer-events-none px-4 w-full" style="max-width: 60%">

                                <!-- Input Container (Full Width Minus Padding) -->
                                <div class="pointer-events-auto relative space-y-3">

                                    <!-- Mode Selector: Segmented Control (EQUAL WIDTH, VISIBLE) -->
                                    <div class="w-full bg-black/40 backdrop-blur-lg rounded-xl p-1.5 border border-white/20">
                                        <div class="flex gap-2">
                                            <!-- Template Mode Button -->
                                            <button
                                                id="mode-template"
                                                data-mode="template"
                                                class="mode-btn flex-1 flex items-center justify-center gap-2 px-3 py-2 rounded-lg text-sm font-medium transition-all duration-200 active:scale-95
                                                         text-white/60 hover:text-white/80
                                                         bg-transparent hover:bg-white/5"
                                            >
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16m10-16v16M3 8h18M3 16h18"></path>
                                                </svg>
                                                <span>Рекламный шаблон</span>
                                            </button>

                                            <!-- Prompt Mode Button -->
                                            <button
                                                id="mode-prompt"
                                                data-mode="prompt"
                                                class="mode-btn flex-1 flex items-center justify-center gap-2 px-3 py-2 rounded-lg text-sm font-medium transition-all duration-200 active:scale-95
                                                         text-white/60 hover:text-white/80
                                                         bg-transparent hover:bg-white/5"
                                            >
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                                <span>Свободный сценарий</span>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Mode Description (DYNAMIC) -->
                                    <div id="mode-description" class="text-center text-xs text-white/60 px-2">
                                        ИИ подберёт лучший сценарий и создаст продающее видео
                                    </div>

                                    <!-- Input + Generate Button Inside -->
                                    <div class="relative">
                                        <textarea
                                            id="prompt"
                                            placeholder="Красивая девушка в чёрном платье медленно идёт вперёд, камера плавно приближается, волосы развеваются на ветру"
                                            class="w-full px-12 py-3 border border-white/30 rounded-2xl bg-white/30 backdrop-blur-md text-gray-900 dark:text-white placeholder:text-gray-500 dark:placeholder:text-gray-400 focus:outline-none transition duration-200 resize-none text-sm shadow-lg"
                                            rows="2"
                                        ></textarea>

                                        <!-- Generate Button - INSIDE Input (RIGHT) -->
                                        <button
                                            id="generate-btn"
                                            class="absolute right-3 top-1/2 -translate-y-1/2 p-2.5 hover:opacity-80 active:scale-95 transition-all duration-150 flex-shrink-0 disabled:opacity-50 disabled:cursor-not-allowed bg-white/20 backdrop-blur-md rounded-full border border-white/30 opacity-50 cursor-not-allowed"
                                            disabled
                                        >
                                            <img id="generate-icon" src="/generate.png" alt="Generate" class="w-8 h-8" />
                                            <div id="generate-spinner" class="hidden animate-spin absolute inset-0 flex items-center justify-center">
                                                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                                </svg>
                                            </div>
                                        </button>

                                        <!-- Tooltip (shown on hover when disabled) -->
                                        <div id="generate-tooltip" class="hidden absolute bottom-full right-3 mb-3 px-3 py-2 bg-gray-900 dark:bg-gray-950 text-white text-xs rounded-lg shadow-lg border border-gray-700 dark:border-gray-800 whitespace-nowrap z-50 pointer-events-none">
                                            Выберите фото, введите описание видео
                                            <div class="absolute top-full right-2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-l-transparent border-r-transparent border-t-gray-900 dark:border-t-gray-950"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</AppLayout>

<script>
    // ========== Get User Balance ==========
    const mainContainer = document.querySelector('[data-user-balance]') as HTMLElement;
    const userBalance = parseInt(mainContainer?.dataset.userBalance || '0', 10);
    console.log(`[APP] User balance: ${userBalance} credits`);

    // ========== Toast Notification System ==========
    function showToast(message: string, type: 'error' | 'success' = 'error') {
        const toast = document.createElement('div');
        toast.className = `fixed top-4 right-4 px-4 py-3 rounded-lg shadow-lg z-50 animate-in fade-in slide-in-from-top-2 ${
            type === 'error'
                ? 'bg-red-500 text-white'
                : 'bg-green-500 text-white'
        }`;
        toast.textContent = message;
        document.body.appendChild(toast);

        // Auto-hide after 3 seconds
        setTimeout(() => {
            toast.classList.add('opacity-0');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // ========== Paywall Overlay for Insufficient Balance ==========
    function showPaywallOverlay() {
        const paywall = document.getElementById('player-paywall') as HTMLElement;
        if (!paywall) return;

        // Show paywall
        paywall.classList.remove('hidden');

        // Auto-hide and reset after 3 seconds
        setTimeout(() => {
            paywall.classList.add('hidden');
        }, 3000);
    }

    // ========== Paywall Button Handler ==========
    const paywallTopupBtn = document.getElementById('paywall-topup') as HTMLButtonElement;
    if (paywallTopupBtn) {
        paywallTopupBtn.addEventListener('click', () => {
            window.location.href = '/billing';
        });
    }

    // ========== Validation and Button State ==========
    const generateBtn = document.getElementById('generate-btn') as HTMLButtonElement;
    const promptInput = document.getElementById('prompt') as HTMLTextAreaElement;
    const imageUpload = document.getElementById('image-upload') as HTMLInputElement;
    let selectedDuration: string | null = null;
    let selectedImage: File | null = null;

    function updateGenerateButtonState() {
        const hasPrompt = promptInput?.value.trim().length > 0;
        const hasDuration = selectedDuration !== null;
        const hasImage = selectedImage !== null;

        if (generateBtn) {
            if (hasPrompt && hasDuration && hasImage) {
                generateBtn.disabled = false;
                generateBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            } else {
                generateBtn.disabled = true;
                generateBtn.classList.add('opacity-50', 'cursor-not-allowed');
            }
        }
    }

    // ========== Tooltip Hover Management ==========
    const tooltip = document.getElementById('generate-tooltip') as HTMLElement;

    if (generateBtn && tooltip) {
        generateBtn.addEventListener('mouseenter', () => {
            if (generateBtn.disabled) {
                tooltip.classList.remove('hidden');
            }
        });

        generateBtn.addEventListener('mouseleave', () => {
            tooltip.classList.add('hidden');
        });
    }

    // Character Counter + Button Validation
    if (promptInput) {
        promptInput.addEventListener('input', () => {
            const count = promptInput.value.length;

            // Truncate if over 500
            if (count > 500) {
                promptInput.value = promptInput.value.substring(0, 500);
            }
            updateGenerateButtonState();
        });
    }

    // ========== Duration Selection ==========
    const durationBtns = document.querySelectorAll('.duration-btn') as NodeListOf<HTMLButtonElement>;

    durationBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Remove active state from all buttons
            durationBtns.forEach(b => {
                b.classList.remove('bg-primary', 'text-white', 'border-primary');
                b.classList.add('border-gray-300', 'dark:border-gray-600', 'text-gray-700', 'dark:text-gray-300', 'bg-white', 'dark:bg-gray-800');
            });

            // Add active state to clicked button
            btn.classList.remove('border-gray-300', 'dark:border-gray-600', 'text-gray-700', 'dark:text-gray-300', 'bg-white', 'dark:bg-gray-800');
            btn.classList.add('bg-primary', 'text-white', 'border-primary');
            selectedDuration = btn.dataset.duration || null;
            updateGenerateButtonState();
        });
    });

    // ========== Image Upload ==========
    const imagePreview = document.getElementById('image-preview') as HTMLImageElement;
    const uploadPlaceholder = document.getElementById('upload-placeholder') as HTMLElement;

    /**
     * Загружает изображение на сервер через API
     */
    async function uploadImageToServer(file: File): Promise<boolean> {
        try {
            const formData = new FormData();
            formData.append('image', file);

            const response = await fetch('/api/upload-image', {
                method: 'POST',
                body: formData,
            });

            const data = await response.json();

            if (!response.ok) {
                console.error('[UPLOAD] Error:', data.error);
                showToast(data.error || 'Ошибка при загрузке изображения', 'error');
                return false;
            }

            console.log('[UPLOAD] ✅ Image uploaded:', data.imagePath);
            return true;
        } catch (error) {
            const errorMessage = error instanceof Error ? error.message : 'Unknown error';
            console.error('[UPLOAD] Error:', errorMessage);
            showToast(`Ошибка: ${errorMessage}`, 'error');
            return false;
        }
    }

    if (imageUpload) {
        imageUpload.addEventListener('change', async (e) => {
            const file = (e.target as HTMLInputElement).files?.[0];
            if (file) {
                // Проверяем, что это JPEG
                if (!file.type.startsWith('image/jpeg')) {
                    showToast('Разрешены только JPEG изображения', 'error');
                    imageUpload.value = '';
                    return;
                }

                // Загружаем изображение на сервер
                const uploadSuccess = await uploadImageToServer(file);
                if (!uploadSuccess) {
                    imageUpload.value = '';
                    return;
                }

                // Сохраняем файл локально для preview
                selectedImage = file;
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target?.result as string;
                    imagePreview.classList.remove('hidden');
                    uploadPlaceholder.classList.add('hidden');
                    updateGenerateButtonState();
                };
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop support
        const uploadArea = imageUpload.parentElement as HTMLElement;
        if (uploadArea) {
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
                const files = e.dataTransfer?.files;
                if (files && files[0]) {
                    imageUpload.files = files;
                    const event = new Event('change', { bubbles: true });
                    imageUpload.dispatchEvent(event);
                }
            });
        }
    }

    // ========== Mode Selector ==========
    let selectedMode: 'template' | 'prompt' = 'template';
    const modeButtons = document.querySelectorAll('.mode-btn') as NodeListOf<HTMLButtonElement>;
    const modeDescription = document.getElementById('mode-description') as HTMLElement;
    const promptInput = document.getElementById('prompt') as HTMLTextAreaElement;

    const modeDescriptions = {
        template: 'ИИ подберёт лучший сценарий и создаст продающее видео',
        prompt: 'Полный контроль над действиями и сценой, но без гарантии качества'
    };

    const modePlaceholders = {
        template: 'Красивая девушка с наушниками, стильный продукт, модный образ, для карточки WB',
        prompt: 'Девушка идёт вперёд, поворачивается к камере, улыбается, снимает наушники, плавное движение камеры, кинематографичный свет'
    };

    // Set initial active state (template mode)
    const templateBtn = document.getElementById('mode-template') as HTMLButtonElement;
    const promptBtn = document.getElementById('mode-prompt') as HTMLButtonElement;

    if (templateBtn) {
        templateBtn.classList.add('bg-white/20', 'text-white');
        templateBtn.classList.remove('text-white/60');
    }

    modeButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const mode = btn.getAttribute('data-mode') as 'template' | 'prompt';
            selectedMode = mode;
            console.log(`[UI] Mode selected: ${selectedMode}`);

            // Update button styles - remove active from all, add to clicked
            modeButtons.forEach(b => {
                b.classList.remove('bg-white/20', 'text-white');
                b.classList.add('text-white/60');
            });
            btn.classList.add('bg-white/20', 'text-white');
            btn.classList.remove('text-white/60');

            // Update description
            if (modeDescription) {
                modeDescription.textContent = modeDescriptions[mode];
            }

            // Update placeholder
            if (promptInput) {
                promptInput.placeholder = modePlaceholders[mode];
            }
        });
    });

    // ========== Generate Button ==========
    const generateIcon = document.getElementById('generate-icon') as HTMLImageElement;
    const generateSpinner = document.getElementById('generate-spinner') as HTMLElement;
    const videoPlaceholder = document.getElementById('video-placeholder') as HTMLElement;
    const videoLoading = document.getElementById('video-loading') as HTMLElement;
    const videoOutput = document.getElementById('video-output') as HTMLVideoElement;
    const videoControls = document.getElementById('video-controls') as HTMLElement;
    const downloadBtn = document.getElementById('download-btn') as HTMLButtonElement;
    const clearBtn = document.getElementById('clear-btn') as HTMLButtonElement;

    if (generateBtn) {
        generateBtn.addEventListener('click', async () => {
            if (!selectedImage || !selectedDuration || !promptInput?.value) {
                console.error('[GEN] Missing required data');
                return;
            }

            // ✨ CHECK BALANCE BEFORE GENERATION
            if (userBalance <= 0) {
                console.log(`[GEN] Insufficient balance: ${userBalance} credits`);
                showPaywallOverlay();
                return;
            }

            // ✨ STEP 1: Clear player before starting generation
            videoOutput.classList.add('hidden');
            videoControls.classList.add('hidden');
            videoOutput.src = '';

            // Disable button and show loading state
            generateBtn.disabled = true;
            generateIcon.classList.add('hidden');
            generateSpinner.classList.remove('hidden');

            // Hide placeholder, show loading indicator
            videoPlaceholder.classList.add('hidden');
            videoLoading.classList.remove('hidden');

            try {
                // Логирование генерации
                console.log(`[UI] generation mode = ${selectedMode}`);
                console.log(`[UI] Starting generation: mode=${selectedMode}, duration=${selectedDuration}s, prompt="${promptInput.value.substring(0, 50)}..."`);

                // Дополнительная отладка
                console.log(`[UI] Mode: ${selectedMode === 'template' ? 'TEMPLATE (AI-selected scene)' : 'PROMPT (Free-form scenario)'}`);
                console.log(`[UI] Duration: ${selectedDuration}s`);
                console.log(`[UI] Cost: ${selectedDuration === 6 ? '1 credit' : '2 credits'}`);

                const response = await fetch('/api/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        prompt: promptInput.value,
                        duration: parseInt(selectedDuration || '6', 10),
                        mode: selectedMode,
                    }),
                });

                const data = await response.json();

                if (!response.ok) {
                    console.error(`[UI] ERROR: Server rejected generation request`);
                    console.error(`[UI]   - status: ${response.status}`);
                    console.error(`[UI]   - error: ${data.error}`);

                    videoLoading.classList.add('hidden');
                    generateIcon.classList.remove('hidden');
                    generateSpinner.classList.add('hidden');
                    generateBtn.disabled = false;

                    const errorMsg = data.error || 'Ошибка при генерации видео';
                    const isBalanceError = errorMsg.toLowerCase().includes('баланс') ||
                                          errorMsg.toLowerCase().includes('кредит') ||
                                          errorMsg.toLowerCase().includes('недостаточно');

                    if (isBalanceError) {
                        showPaywallOverlay();
                    } else {
                        videoPlaceholder.classList.remove('hidden');
                        showToast(errorMsg, 'error');
                    }
                    return;
                }

                const generationId = data.generationId;
                console.log(`[UI] OK: Generation request accepted`);
                console.log(`[UI]   - generationId: ${generationId}`);
                console.log(`[UI]   - mode: ${data.mode}`);
                console.log(`[UI]   - cost: ${data.cost} credits`);

                // Ждем завершения генерации (опрашиваем статус)
                let generationComplete = false;
                let videoUrl: string | null = null;
                let checkAttempts = 0;
                const maxAttempts = 300; // 300 секунд (5 минут) - ждем callback от MiniMax

                while (!generationComplete && checkAttempts < maxAttempts) {
                    await new Promise(resolve => setTimeout(resolve, 1000)); // Ждем 1 сек
                    checkAttempts++;

                    try {
                        const statusResponse = await fetch(
                            `/api/generate?generationId=${generationId}`
                        );
                        const statusData = await statusResponse.json();

                        if (checkAttempts % 10 === 0) {
                            console.log(`[UI] ⏳ Still processing... (${checkAttempts}s elapsed)`);
                        }

                        if (statusData.status === 'success' && statusData.charged) {
                            generationComplete = true;
                            videoUrl = statusData.videoUrl;
                            console.log(`[UI] DONE: Generation complete`);
                            console.log(`[UI]   - generationId: ${generationId}`);
                            console.log(`[UI]   - videoUrl: ${videoUrl}`);
                        } else if (statusData.status === 'failed') {
                            console.error(`[UI] ERROR: Generation failed`);
                            console.error(`[UI]   - generationId: ${generationId}`);
                            console.error(`[UI]   - status: ${statusData.status}`);
                            throw new Error('Генерация видео не удалась');
                        }
                    } catch (error) {
                        if (!(error instanceof Error && error.message.includes('не удалась'))) {
                            console.error('[UI] Error checking status:', error);
                        } else {
                            throw error;
                        }
                    }
                }

                if (!generationComplete || !videoUrl) {
                    console.error(`[UI] ERROR: Generation timeout (${checkAttempts}s elapsed)`);
                    throw new Error(
                        'Время ожидания генерации истекло. Видео может быть готово позже.'
                    );
                }

                // Генерация готова - показываем видео из MiniMax
                videoLoading.classList.add('hidden');
                videoOutput.src = videoUrl;
                videoOutput.classList.remove('hidden');
                videoControls.classList.remove('hidden');

                // Сохраняем videoUrl для скачивания
                (downloadBtn as any).videoUrl = videoUrl;

                console.log(`[UI] Video displayed successfully`);
            } catch (error) {
                const errorMessage = error instanceof Error ? error.message : 'Неизвестная ошибка';
                console.error(`[UI] ERROR: Generation failed`);
                console.error(`[UI]   - error: ${errorMessage}`);

                videoLoading.classList.add('hidden');
                const isBalanceError = errorMessage.toLowerCase().includes('баланс') ||
                                      errorMessage.toLowerCase().includes('кредит') ||
                                      errorMessage.toLowerCase().includes('недостаточно');

                if (isBalanceError) {
                    showPaywallOverlay();
                } else {
                    videoPlaceholder.classList.remove('hidden');
                    showToast(`Ошибка: ${errorMessage}`, 'error');
                }
            } finally {
                // Re-enable button and reset spinner
                generateIcon.classList.remove('hidden');
                generateSpinner.classList.add('hidden');
                generateBtn.disabled = false;
                updateGenerateButtonState();
            }
        });
    }

    // ========== Download Button ==========
    if (downloadBtn) {
        downloadBtn.addEventListener('click', () => {
            // Получаем URL видео (сохранили при успешной генерации)
            const videoUrl = (downloadBtn as any).videoUrl || '/videos/output.mp4';

            // Create download link
            const link = document.createElement('a');
            link.href = videoUrl;
            link.download = 'generated-video.mp4';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        });
    }

    // ========== Clear Button ==========
    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            // Hide video and controls
            videoOutput.classList.add('hidden');
            videoControls.classList.add('hidden');

            // Show placeholder
            videoPlaceholder.classList.remove('hidden');

            // Reset video source
            videoOutput.src = '';

            // Clear image preview
            imagePreview.classList.add('hidden');
            imagePreview.src = '';
            uploadPlaceholder.classList.remove('hidden');

            // Clear selected image
            selectedImage = null;
            imageUpload.value = '';

            // Update button state
            updateGenerateButtonState();
        });
    }

    // Set default duration to 6s on page load
    const firstDurationBtn = document.querySelector('[data-duration="6"]') as HTMLButtonElement;
    if (firstDurationBtn) {
        firstDurationBtn.click();
    }

    // Initialize button state on page load
    updateGenerateButtonState();
</script>


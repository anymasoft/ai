<script>
    // ========== Get User Balance ==========
    const mainContainer = document.querySelector('[data-user-balance]') as HTMLElement;
    const userBalance = parseInt(mainContainer?.dataset.userBalance || '0', 10);
    console.log(`[APP] User balance: ${userBalance} credits`);

    // ========== Toast Notification System ==========
    function showToast(message: string, type: 'error' | 'success' = 'error') {
        const toast = document.createElement('div');
        toast.className = `fixed top-4 right-4 px-4 py-3 rounded-lg shadow-lg z-50 animate-in fade-in slide-in-from-top-2 ${
            type === 'error'
                ? 'bg-red-500 text-white'
                : 'bg-green-500 text-white'
        }`;
        toast.textContent = message;
        document.body.appendChild(toast);

        // Auto-hide after 3 seconds
        setTimeout(() => {
            toast.classList.add('opacity-0');
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // ========== Paywall Overlay for Insufficient Balance ==========
    function showPaywallOverlay() {
        const paywall = document.getElementById('player-paywall') as HTMLElement;
        if (!paywall) return;

        // Show paywall
        paywall.classList.remove('hidden');

        // Auto-hide and reset after 3 seconds
        setTimeout(() => {
            paywall.classList.add('hidden');
        }, 3000);
    }

    // ========== Paywall Button Handler ==========
    const paywallTopupBtn = document.getElementById('paywall-topup') as HTMLButtonElement;
    if (paywallTopupBtn) {
        paywallTopupBtn.addEventListener('click', () => {
            window.location.href = '/billing';
        });
    }

    // ========== Validation and Button State ==========
    const generateBtn = document.getElementById('generate-btn') as HTMLButtonElement;
    const promptInput = document.getElementById('prompt') as HTMLTextAreaElement;
    const imageUpload = document.getElementById('image-upload') as HTMLInputElement;
    let selectedDuration: string | null = null;
    let selectedImage: File | null = null;

    function updateGenerateButtonState() {
        const hasPrompt = promptInput?.value.trim().length > 0;
        const hasDuration = selectedDuration !== null;
        const hasImage = selectedImage !== null;

        if (generateBtn) {
            if (hasPrompt && hasDuration && hasImage) {
                generateBtn.disabled = false;
                generateBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            } else {
                generateBtn.disabled = true;
                generateBtn.classList.add('opacity-50', 'cursor-not-allowed');
            }
        }
    }

    // ========== Tooltip Hover Management ==========
    const tooltip = document.getElementById('generate-tooltip') as HTMLElement;

    if (generateBtn && tooltip) {
        generateBtn.addEventListener('mouseenter', () => {
            if (generateBtn.disabled) {
                tooltip.classList.remove('hidden');
            }
        });

        generateBtn.addEventListener('mouseleave', () => {
            tooltip.classList.add('hidden');
        });
    }

    // Character Counter + Button Validation
    if (promptInput) {
        promptInput.addEventListener('input', () => {
            const count = promptInput.value.length;

            // Truncate if over 500
            if (count > 500) {
                promptInput.value = promptInput.value.substring(0, 500);
            }
            updateGenerateButtonState();
        });
    }

    // ========== Duration Selection ==========
    const durationBtns = document.querySelectorAll('.duration-btn') as NodeListOf<HTMLButtonElement>;

    durationBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Remove active state from all buttons
            durationBtns.forEach(b => {
                b.classList.remove('bg-primary', 'text-white', 'border-primary');
                b.classList.add('border-gray-300', 'dark:border-gray-600', 'text-gray-700', 'dark:text-gray-300', 'bg-white', 'dark:bg-gray-800');
            });

            // Add active state to clicked button
            btn.classList.remove('border-gray-300', 'dark:border-gray-600', 'text-gray-700', 'dark:text-gray-300', 'bg-white', 'dark:bg-gray-800');
            btn.classList.add('bg-primary', 'text-white', 'border-primary');
            selectedDuration = btn.dataset.duration || null;
            updateGenerateButtonState();
        });
    });

    // ========== Image Upload ==========
    const imagePreview = document.getElementById('image-preview') as HTMLImageElement;
    const uploadPlaceholder = document.getElementById('upload-placeholder') as HTMLElement;

    /**
     * –ó–∞–≥—Ä—É–∂–∞–µ—Ç –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –Ω–∞ —Å–µ—Ä–≤–µ—Ä —á–µ—Ä–µ–∑ API
     */
    async function uploadImageToServer(file: File): Promise<boolean> {
        try {
            const formData = new FormData();
            formData.append('image', file);

            const response = await fetch('/api/upload-image', {
                method: 'POST',
                body: formData,
            });

            const data = await response.json();

            if (!response.ok) {
                console.error('[UPLOAD] Error:', data.error);
                showToast(data.error || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è', 'error');
                return false;
            }

            console.log('[UPLOAD] ‚úÖ Image uploaded:', data.imagePath);
            return true;
        } catch (error) {
            const errorMessage = error instanceof Error ? error.message : 'Unknown error';
            console.error('[UPLOAD] Error:', errorMessage);
            showToast(`–û—à–∏–±–∫–∞: ${errorMessage}`, 'error');
            return false;
        }
    }

    if (imageUpload) {
        imageUpload.addEventListener('change', async (e) => {
            const file = (e.target as HTMLInputElement).files?.[0];
            if (file) {
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —á—Ç–æ —ç—Ç–æ JPEG
                if (!file.type.startsWith('image/jpeg')) {
                    showToast('–†–∞–∑—Ä–µ—à–µ–Ω—ã —Ç–æ–ª—å–∫–æ JPEG –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è', 'error');
                    imageUpload.value = '';
                    return;
                }

                // –ó–∞–≥—Ä—É–∂–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –Ω–∞ —Å–µ—Ä–≤–µ—Ä
                const uploadSuccess = await uploadImageToServer(file);
                if (!uploadSuccess) {
                    imageUpload.value = '';
                    return;
                }

                // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ñ–∞–π–ª –ª–æ–∫–∞–ª—å–Ω–æ –¥–ª—è preview
                selectedImage = file;
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target?.result as string;
                    imagePreview.classList.remove('hidden');
                    uploadPlaceholder.classList.add('hidden');
                    updateGenerateButtonState();
                };
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop support
        const uploadArea = imageUpload.parentElement as HTMLElement;
        if (uploadArea) {
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
                const files = e.dataTransfer?.files;
                if (files && files[0]) {
                    imageUpload.files = files;
                    const event = new Event('change', { bubbles: true });
                    imageUpload.dispatchEvent(event);
                }
            });
        }
    }

    // ========== Mode Selector ==========
    let selectedMode: 'template' | 'prompt' = 'template';
    const modeButtons = document.querySelectorAll('.mode-btn') as NodeListOf<HTMLButtonElement>;
    const modeDescription = document.getElementById('mode-description') as HTMLElement;

    const modeDescriptions = {
        template: '–ò–ò –ø–æ–¥–±–µ—Ä—ë—Ç –ª—É—á—à–∏–π —Å—Ü–µ–Ω–∞—Ä–∏–π –∏ —Å–æ–∑–¥–∞—Å—Ç –ø—Ä–æ–¥–∞—é—â–µ–µ –≤–∏–¥–µ–æ',
        prompt: '–í–∞—à —Å—Ü–µ–Ω–∞—Ä–∏–π –±—É–¥–µ—Ç —Ç–æ—á–Ω–æ –≤–æ–ø–ª–æ—â—ë–Ω –≤ –≤–∏–¥–µ–æ'
    };

    // Set initial active state
    const templateBtn = document.getElementById('mode-template') as HTMLButtonElement;
    const promptBtn = document.getElementById('mode-prompt') as HTMLButtonElement;
    if (templateBtn) {
        templateBtn.classList.add('ring-2', 'ring-white', 'bg-white/40');
    }

    modeButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            const mode = btn.getAttribute('data-mode') as 'template' | 'prompt';
            selectedMode = mode;
            console.log(`[UI] Mode selected: ${selectedMode}`);

            // Update button styles
            modeButtons.forEach(b => {
                b.classList.remove('ring-2', 'ring-white', 'bg-white/40');
            });
            btn.classList.add('ring-2', 'ring-white', 'bg-white/40');

            // Update description
            if (modeDescription) {
                modeDescription.textContent = modeDescriptions[mode];
            }
        });
    });

    // ========== Generate Button ==========
    const generateIcon = document.getElementById('generate-icon') as HTMLImageElement;
    const generateSpinner = document.getElementById('generate-spinner') as HTMLElement;
    const videoPlaceholder = document.getElementById('video-placeholder') as HTMLElement;
    const videoLoading = document.getElementById('video-loading') as HTMLElement;
    const videoOutput = document.getElementById('video-output') as HTMLVideoElement;
    const videoControls = document.getElementById('video-controls') as HTMLElement;
    const downloadBtn = document.getElementById('download-btn') as HTMLButtonElement;
    const clearBtn = document.getElementById('clear-btn') as HTMLButtonElement;

    if (generateBtn) {
        generateBtn.addEventListener('click', async () => {
            if (!selectedImage || !selectedDuration || !promptInput?.value) {
                console.error('[GEN] Missing required data');
                return;
            }

            // ‚ú® CHECK BALANCE BEFORE GENERATION
            if (userBalance <= 0) {
                console.log(`[GEN] Insufficient balance: ${userBalance} credits`);
                showPaywallOverlay();
                return;
            }

            // ‚ú® STEP 1: Clear player before starting generation
            videoOutput.classList.add('hidden');
            videoControls.classList.add('hidden');
            videoOutput.src = '';

            // Disable button and show loading state
            generateBtn.disabled = true;
            generateIcon.classList.add('hidden');
            generateSpinner.classList.remove('hidden');

            // Hide placeholder, show loading indicator
            videoPlaceholder.classList.add('hidden');
            videoLoading.classList.remove('hidden');

            try {
                // –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∑–∞–ø—Ä–æ—Å –Ω–∞ –≥–µ–Ω–µ—Ä–∞—Ü–∏—é (–∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ —É–∂–µ –∑–∞–≥—Ä—É–∂–µ–Ω–æ –Ω–∞ —Å–µ—Ä–≤–µ—Ä)
                console.log(`[GEN] Starting generation: mode=${selectedMode}, duration=${selectedDuration}, prompt="${promptInput.value.substring(0, 50)}..."`);

                const response = await fetch('/api/generate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        prompt: promptInput.value,
                        duration: parseInt(selectedDuration || '6', 10),
                        mode: selectedMode,
                    }),
                });

                const data = await response.json();

                if (!response.ok) {
                    console.error('[GEN] Error:', data.error);
                    videoLoading.classList.add('hidden');
                    generateIcon.classList.remove('hidden');
                    generateSpinner.classList.add('hidden');
                    generateBtn.disabled = false;

                    const errorMsg = data.error || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –≤–∏–¥–µ–æ';
                    const isBalanceError = errorMsg.toLowerCase().includes('–±–∞–ª–∞–Ω—Å') ||
                                          errorMsg.toLowerCase().includes('–∫—Ä–µ–¥–∏—Ç') ||
                                          errorMsg.toLowerCase().includes('–Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ');

                    if (isBalanceError) {
                        showPaywallOverlay();
                    } else {
                        videoPlaceholder.classList.remove('hidden');
                        showToast(errorMsg, 'error');
                    }
                    return;
                }

                const generationId = data.generationId;
                console.log(`[GEN] Started generation: ${generationId}`);

                // –ñ–¥–µ–º –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ (–æ–ø—Ä–∞—à–∏–≤–∞–µ–º —Å—Ç–∞—Ç—É—Å)
                let generationComplete = false;
                let videoUrl: string | null = null;
                let checkAttempts = 0;
                const maxAttempts = 300; // 300 —Å–µ–∫—É–Ω–¥ (5 –º–∏–Ω—É—Ç) - –∂–¥–µ–º callback –æ—Ç MiniMax

                while (!generationComplete && checkAttempts < maxAttempts) {
                    await new Promise(resolve => setTimeout(resolve, 1000)); // –ñ–¥–µ–º 1 —Å–µ–∫
                    checkAttempts++;

                    try {
                        const statusResponse = await fetch(
                            `/api/generate?generationId=${generationId}`
                        );
                        const statusData = await statusResponse.json();

                        console.log(`[GEN] Status check: ${statusData.status} (attempt ${checkAttempts})`);

                        if (statusData.status === 'success' && statusData.charged) {
                            generationComplete = true;
                            videoUrl = statusData.videoUrl;
                            console.log(`[GEN] ‚úÖ Generation complete and charged. videoUrl=${videoUrl}`);
                        } else if (statusData.status === 'failed') {
                            throw new Error('–ì–µ–Ω–µ—Ä–∞—Ü–∏—è –≤–∏–¥–µ–æ –Ω–µ —É–¥–∞–ª–∞—Å—å');
                        }
                    } catch (error) {
                        console.error('[GEN] Error checking status:', error);
                    }
                }

                if (!generationComplete || !videoUrl) {
                    throw new Error(
                        '–í—Ä–µ–º—è –æ–∂–∏–¥–∞–Ω–∏—è –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –∏—Å—Ç–µ–∫–ª–æ. –í–∏–¥–µ–æ –º–æ–∂–µ—Ç –±—ã—Ç—å –≥–æ—Ç–æ–≤–æ –ø–æ–∑–∂–µ.'
                    );
                }

                // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è –≥–æ—Ç–æ–≤–∞ - –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –≤–∏–¥–µ–æ –∏–∑ MiniMax
                videoLoading.classList.add('hidden');
                videoOutput.src = videoUrl; // URL –≤–∏–¥–µ–æ –∏–∑ API
                videoOutput.classList.remove('hidden');
                videoControls.classList.remove('hidden');

                // –°–æ—Ö—Ä–∞–Ω—è–µ–º videoUrl –¥–ª—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è
                (downloadBtn as any).videoUrl = videoUrl;

                console.log(`[GEN] Video displayed for generation: ${generationId}`);
            } catch (error) {
                const errorMessage = error instanceof Error ? error.message : '–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–∞—è –æ—à–∏–±–∫–∞';
                console.error('[GEN] Generation error:', errorMessage);

                videoLoading.classList.add('hidden');
                const isBalanceError = errorMessage.toLowerCase().includes('–±–∞–ª–∞–Ω—Å') ||
                                      errorMessage.toLowerCase().includes('–∫—Ä–µ–¥–∏—Ç') ||
                                      errorMessage.toLowerCase().includes('–Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ');

                if (isBalanceError) {
                    showPaywallOverlay();
                } else {
                    videoPlaceholder.classList.remove('hidden');
                    showToast(`–û—à–∏–±–∫–∞: ${errorMessage}`, 'error');
                }
            } finally {
                // Re-enable button and reset spinner
                generateIcon.classList.remove('hidden');
                generateSpinner.classList.add('hidden');
                generateBtn.disabled = false;
                updateGenerateButtonState();
            }
        });
    }

    // ========== Download Button ==========
    if (downloadBtn) {
        downloadBtn.addEventListener('click', () => {
            // –ü–æ–ª—É—á–∞–µ–º URL –≤–∏–¥–µ–æ (—Å–æ—Ö—Ä–∞–Ω–∏–ª–∏ –ø—Ä–∏ —É—Å–ø–µ—à–Ω–æ–π –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏)
            const videoUrl = (downloadBtn as any).videoUrl || '/videos/output.mp4';

            // Create download link
            const link = document.createElement('a');
            link.href = videoUrl;
            link.download = 'generated-video.mp4';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        });
    }

    // ========== Clear Button ==========
    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            // Hide video and controls
            videoOutput.classList.add('hidden');
            videoControls.classList.add('hidden');

            // Show placeholder
            videoPlaceholder.classList.remove('hidden');

            // Reset video source
            videoOutput.src = '';

            // Clear image preview
            imagePreview.classList.add('hidden');
            imagePreview.src = '';
            uploadPlaceholder.classList.remove('hidden');

            // Clear selected image
            selectedImage = null;
            imageUpload.value = '';

            // Update button state
            updateGenerateButtonState();
        });
    }

    // Set default duration to 6s on page load
    const firstDurationBtn = document.querySelector('[data-duration="6"]') as HTMLButtonElement;
    if (firstDurationBtn) {
        firstDurationBtn.click();
    }

    // Initialize button state on page load
    updateGenerateButtonState();
</script>


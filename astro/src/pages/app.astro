---
import AppLayout from '../layouts/AppLayout.astro';
---

<AppLayout title="Create Video - Video Reader AI">
    <!-- Main Container - No scroll, fixed 100vh -->
    <div class="w-full h-full flex flex-col overflow-hidden">
        <!-- Content Area - flex-1 to fill remaining height -->
        <div class="flex-1 overflow-hidden">
            <!-- Grid: LEFT (upload) + RIGHT (video stage) -->
            <div class="h-full p-4 flex gap-4">

                <!-- LEFT COLUMN: Upload Image (FIXED WIDTH) -->
                <div class="flex-shrink-0 w-80">
                    <div class="h-full border border-gray-100 dark:border-gray-700 rounded-3xl p-4 bg-white dark:bg-gray-800 flex flex-col overflow-hidden">

                        <!-- Upload Canvas - aspect-ratio 3/4 -->
                        <div class="relative border-2 border-dashed border-gray-200 dark:border-gray-600 rounded-2xl overflow-hidden hover:border-primary transition cursor-pointer group flex-1 flex items-center justify-center bg-gray-50 dark:bg-gray-900">

                            <input
                                type="file"
                                accept="image/*"
                                class="absolute inset-0 opacity-0 cursor-pointer z-10"
                                id="image-upload"
                            />

                            <!-- Placeholder -->
                            <div id="upload-placeholder" class="space-y-3 text-center pointer-events-none">
                                <svg class="w-8 h-8 mx-auto text-gray-400 group-hover:text-primary transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                </svg>
                                <div>
                                    <p class="text-xs font-medium text-gray-700 dark:text-gray-300">Drag image here</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">or click to select</p>
                                </div>
                            </div>

                            <!-- Image Preview -->
                            <img
                                id="image-preview"
                                class="hidden absolute inset-0 w-full h-full object-contain"
                                alt="Preview"
                            />
                        </div>
                    </div>
                </div>

                <!-- RIGHT COLUMN: Video Stage (FILLS REMAINING SPACE) -->
                <div class="flex-1 overflow-hidden">
                    <div class="h-full border border-gray-100 dark:border-gray-700 rounded-3xl overflow-hidden bg-white dark:bg-gray-800 flex flex-col relative">

                        <!-- Video Area - flex-1 to fill space -->
                        <div class="flex-1 bg-gradient-to-br from-gray-100 to-gray-50 dark:from-gray-800 dark:to-gray-900 flex items-center justify-center relative overflow-hidden">

                            <!-- Video Placeholder (shown before generation) -->
                            <div id="video-placeholder" class="text-center space-y-4">
                                <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <p class="text-gray-500 dark:text-gray-400 text-sm">Generate your video</p>
                            </div>

                            <!-- Loading Spinner (shown during generation) -->
                            <div id="video-loading" class="hidden text-center space-y-4">
                                <div class="flex justify-center">
                                    <div class="animate-spin rounded-full h-12 w-12 border-4 border-gray-200 dark:border-gray-700 border-t-primary"></div>
                                </div>
                                <p class="text-gray-500 dark:text-gray-400 text-sm">Generating your video...</p>
                            </div>

                            <!-- Video Player (shown after generation) -->
                            <video
                                id="video-output"
                                class="hidden w-full h-full object-contain"
                                controls
                                controlsList="nodownload"
                            >
                                <source src="/demo.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>

                            <!-- Download Button - Top Right (hidden until generation) -->
                            <button
                                id="download-btn"
                                class="hidden absolute top-4 right-4 p-2.5 rounded-full bg-white dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-600 transition shadow-lg z-20"
                                title="Download"
                            >
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                </svg>
                            </button>

                            <!-- PROMPT BAR - Floating Control Panel (CENTERED, BOTTOM) -->
                            <div class="absolute bottom-6 left-1/2 -translate-x-1/2 z-30 pointer-events-none px-4 w-full" style="max-width: 60%">

                                <!-- Input Container (Full Width Minus Padding) -->
                                <div class="pointer-events-auto relative">

                                    <!-- Input + Buttons Inside -->
                                    <div class="relative">
                                        <textarea
                                            id="prompt"
                                            placeholder="Describe your video..."
                                            class="w-full px-16 py-3 border border-white/30 rounded-2xl bg-white/20 backdrop-blur-md text-gray-900 dark:text-white placeholder:text-gray-500 dark:placeholder:text-gray-400 focus:ring-2 focus:ring-primary focus:border-transparent focus:outline-none transition duration-200 resize-none text-sm shadow-lg"
                                            rows="2"
                                        ></textarea>

                                        <!-- Duration Buttons - INSIDE textarea (LEFT BOTTOM) -->
                                        <div class="absolute left-3 bottom-2 flex flex-col gap-1 pointer-events-auto">
                                            <button
                                                type="button"
                                                data-duration="6"
                                                class="duration-btn px-2.5 py-1 rounded-full text-xs font-semibold border border-white/30 text-gray-700 dark:text-gray-300 bg-white/20 backdrop-blur-md hover:border-primary hover:text-primary transition shadow-sm hover:shadow-md active:scale-95 duration-150"
                                            >
                                                6s
                                            </button>
                                            <button
                                                type="button"
                                                data-duration="10"
                                                class="duration-btn px-2.5 py-1 rounded-full text-xs font-semibold border border-white/30 text-gray-700 dark:text-gray-300 bg-white/20 backdrop-blur-md hover:border-primary hover:text-primary transition shadow-sm hover:shadow-md active:scale-95 duration-150"
                                            >
                                                10s
                                            </button>
                                        </div>

                                        <!-- Generate Button - INSIDE Input (RIGHT) -->
                                        <button
                                            id="generate-btn"
                                            class="absolute right-3 top-1/2 -translate-y-1/2 p-2.5 hover:opacity-80 active:scale-95 transition-all duration-150 flex-shrink-0 disabled:opacity-50 disabled:cursor-not-allowed bg-white/20 backdrop-blur-md rounded-full border border-white/30"
                                            title="Generate"
                                        >
                                            <img id="generate-icon" src="/generate.png" alt="Generate" class="w-8 h-8" />
                                            <div id="generate-spinner" class="hidden animate-spin absolute inset-0 flex items-center justify-center">
                                                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                                </svg>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="fixed bottom-4 right-4 z-50 flex flex-col gap-3 pointer-events-none max-w-md"></div>
</AppLayout>

<script>
    // ========== Toast Notifications (shadcn style) ==========
    function showToast(message: string, type: 'error' | 'success' | 'info' = 'info', duration: number = 4000) {
        const container = document.getElementById('toast-container') as HTMLElement;
        if (!container) return;

        // Create toast element
        const toast = document.createElement('div');
        toast.className = `
            pointer-events-auto flex items-start gap-3 px-4 py-3 rounded-lg shadow-lg
            border backdrop-blur-sm animate-in fade-in slide-in-from-bottom-4 duration-300
            ${type === 'error' ? 'bg-red-50 dark:bg-red-950 border-red-200 dark:border-red-800' : ''}
            ${type === 'success' ? 'bg-green-50 dark:bg-green-950 border-green-200 dark:border-green-800' : ''}
            ${type === 'info' ? 'bg-blue-50 dark:bg-blue-950 border-blue-200 dark:border-blue-800' : ''}
        `;

        // Create icon
        let icon = '';
        if (type === 'error') {
            icon = `<svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>`;
        } else if (type === 'success') {
            icon = `<svg class="w-5 h-5 text-green-600 dark:text-green-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>`;
        } else {
            icon = `<svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm3.5-9c.83 0 1.5-.67 1.5-1.5S16.33 8 15.5 8 14 8.67 14 9.5s.67 1.5 1.5 1.5zm-7 0c.83 0 1.5-.67 1.5-1.5S9.33 8 8.5 8 7 8.67 7 9.5 7.67 11 8.5 11zm3.5 6.5c2.33 0 4.31-1.46 5.11-3.5H6.89c.8 2.04 2.78 3.5 5.11 3.5z"/>
            </svg>`;
        }

        // Get text color based on type
        const textColor = {
            error: 'text-red-900 dark:text-red-100',
            success: 'text-green-900 dark:text-green-100',
            info: 'text-blue-900 dark:text-blue-100'
        }[type];

        toast.innerHTML = `
            ${icon}
            <div class="flex-1 min-w-0">
                <p class="${textColor} text-sm font-medium break-words">${message}</p>
            </div>
            <button class="toast-close ml-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 flex-shrink-0">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                </svg>
            </button>
        `;

        // Add close button listener
        const closeBtn = toast.querySelector('.toast-close') as HTMLElement;
        if (closeBtn) {
            closeBtn.addEventListener('click', () => {
                toast.classList.add('animate-out', 'fade-out', 'slide-out-to-bottom-4');
                setTimeout(() => toast.remove(), 300);
            });
        }

        // Add to container
        container.appendChild(toast);

        // Auto-remove after duration
        setTimeout(() => {
            if (toast.parentElement) {
                toast.classList.add('animate-out', 'fade-out', 'slide-out-to-bottom-4');
                setTimeout(() => toast.remove(), 300);
            }
        }, duration);
    }

    // ========== Character Counter ==========
    const promptInput = document.getElementById('prompt') as HTMLTextAreaElement;

    if (promptInput) {
        promptInput.addEventListener('input', () => {
            const count = promptInput.value.length;

            // Truncate if over 500
            if (count > 500) {
                promptInput.value = promptInput.value.substring(0, 500);
            }
        });
    }

    // ========== Duration Selection ==========
    const durationBtns = document.querySelectorAll('.duration-btn') as NodeListOf<HTMLButtonElement>;
    let selectedDuration: string | null = null;

    durationBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Remove active state from all buttons
            durationBtns.forEach(b => {
                b.classList.remove('bg-primary', 'text-white', 'border-primary');
                b.classList.add('border-white/30', 'text-gray-700', 'dark:text-gray-300', 'bg-white/20');
            });

            // Add active state to clicked button
            btn.classList.remove('border-white/30', 'text-gray-700', 'dark:text-gray-300', 'bg-white/20');
            btn.classList.add('bg-primary', 'text-white', 'border-primary');
            selectedDuration = btn.dataset.duration || null;
        });
    });

    // ========== Image Upload ==========
    const imageUpload = document.getElementById('image-upload') as HTMLInputElement;
    const imagePreview = document.getElementById('image-preview') as HTMLImageElement;
    const uploadPlaceholder = document.getElementById('upload-placeholder') as HTMLElement;

    if (imageUpload) {
        imageUpload.addEventListener('change', (e) => {
            const file = (e.target as HTMLInputElement).files?.[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target?.result as string;
                    imagePreview.classList.remove('hidden');
                    uploadPlaceholder.classList.add('hidden');
                };
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop support
        const uploadArea = imageUpload.parentElement as HTMLElement;
        if (uploadArea) {
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('border-primary', 'bg-primary/5');
                const files = e.dataTransfer?.files;
                if (files && files[0]) {
                    imageUpload.files = files;
                    const event = new Event('change', { bubbles: true });
                    imageUpload.dispatchEvent(event);
                }
            });
        }
    }

    // ========== Generate Button ==========
    const generateBtn = document.getElementById('generate-btn') as HTMLButtonElement;
    const generateIcon = document.getElementById('generate-icon') as HTMLImageElement;
    const generateSpinner = document.getElementById('generate-spinner') as HTMLElement;
    const videoPlaceholder = document.getElementById('video-placeholder') as HTMLElement;
    const videoLoading = document.getElementById('video-loading') as HTMLElement;
    const videoOutput = document.getElementById('video-output') as HTMLVideoElement;
    const downloadBtn = document.getElementById('download-btn') as HTMLButtonElement;

    if (generateBtn) {
        generateBtn.addEventListener('click', async () => {
            const hasImage = imagePreview && !imagePreview.classList.contains('hidden');
            const hasPrompt = promptInput && promptInput.value.trim().length > 0;
            const hasDuration = selectedDuration !== null;

            if (hasImage && hasPrompt && hasDuration) {
                // Disable button and show loading state
                generateBtn.disabled = true;
                generateIcon.classList.add('hidden');
                generateSpinner.classList.remove('hidden');

                // Hide placeholder, show loading indicator
                videoPlaceholder.classList.add('hidden');
                videoLoading.classList.remove('hidden');

                // Simulate video generation with 3 second delay
                await new Promise(resolve => setTimeout(resolve, 3000));

                // Hide loading, show video
                videoLoading.classList.add('hidden');
                videoOutput.classList.remove('hidden');
                downloadBtn.classList.remove('hidden');

                // Re-enable button and reset spinner
                generateIcon.classList.remove('hidden');
                generateSpinner.classList.add('hidden');
                generateBtn.disabled = false;

                // Show success toast
                showToast('Видео готово! Нажми кнопку скачивания внизу', 'success', 5000);
            } else {
                // Provide feedback about missing fields
                let missingFields = [];
                if (!hasImage) missingFields.push('фото');
                if (!hasPrompt) missingFields.push('описание');
                if (!hasDuration) missingFields.push('длительность');
                showToast(`Заполните: ${missingFields.join(', ')}`, 'error');
            }
        });
    }

    // ========== Download Button ==========
    if (downloadBtn) {
        downloadBtn.addEventListener('click', () => {
            // Create download link
            const link = document.createElement('a');
            link.href = '/demo.mp4';
            link.download = 'generated-video.mp4';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        });
    }
</script>

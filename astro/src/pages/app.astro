---
import Container from '../components/Container.astro';
import AppLayout from '../layouts/AppLayout.astro';
---

<AppLayout title="Create Video - Video Reader AI">
    <div class="w-full h-full flex flex-col overflow-hidden">
        <!-- Main Content - No Scroll -->
        <div class="flex-1 overflow-hidden">
            <div class="p-4 h-full">
                <div class="grid lg:grid-cols-3 gap-4 h-full max-w-7xl mx-auto">
                    <!-- Left Column: Form -->
                    <div class="lg:col-span-1 flex flex-col space-y-2 h-full">
                        <!-- Upload Card - Large -->
                        <div class="border border-gray-100 dark:border-gray-700 rounded-3xl p-3 bg-white dark:bg-gray-800 flex-1 flex flex-col">
                            <label class="block text-sm font-semibold text-gray-900 dark:text-white mb-2">
                                Upload Image
                            </label>
                            <div class="relative border-2 border-dashed border-gray-200 dark:border-gray-600 rounded-2xl p-4 text-center hover:border-primary transition cursor-pointer group flex-1 flex items-center justify-center">
                                <input
                                    type="file"
                                    accept="image/*"
                                    class="absolute inset-0 opacity-0 cursor-pointer"
                                    id="image-upload"
                                />
                                <div id="upload-placeholder" class="space-y-2 text-center">
                                    <svg class="w-8 h-8 mx-auto text-gray-400 group-hover:text-primary transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    <div>
                                        <p class="text-xs font-medium text-gray-700 dark:text-gray-300">
                                            Drag image here
                                        </p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">
                                            or click to select
                                        </p>
                                    </div>
                                </div>
                                <img
                                    id="image-preview"
                                    class="hidden max-h-full max-w-full object-contain"
                                    alt="Preview"
                                />
                            </div>
                        </div>

                        <!-- Prompt Card -->
                        <div class="border border-gray-100 dark:border-gray-700 rounded-3xl p-3 bg-white dark:bg-gray-800">
                            <label class="block text-sm font-semibold text-gray-900 dark:text-white mb-2">
                                Describe Your Video
                            </label>
                            <textarea
                                id="prompt"
                                placeholder="E.g., 'Create a dancing video of person walking on beach'"
                                class="w-full px-3 py-2 border border-gray-100 dark:border-gray-700 rounded-2xl bg-white dark:bg-gray-900 text-gray-900 dark:text-white placeholder:text-gray-400 dark:placeholder:text-gray-500 focus:ring-2 focus:ring-primary focus:border-transparent focus:outline-none transition duration-200 resize-none text-sm h-20"
                            ></textarea>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                <span id="char-count">0</span>/500 characters
                            </p>
                        </div>

                        <!-- Duration + Generate Row -->
                        <div class="flex gap-2 h-11">
                            <!-- Duration Card -->
                            <div class="border border-gray-100 dark:border-gray-700 rounded-3xl p-2 bg-white dark:bg-gray-800 flex items-center gap-1">
                                <label class="text-xs font-semibold text-gray-900 dark:text-white whitespace-nowrap px-2">
                                    Duration:
                                </label>
                                <div class="flex gap-1">
                                    <button
                                        type="button"
                                        data-duration="6"
                                        class="duration-btn py-1 px-2 rounded-full text-xs font-medium border border-gray-100 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:border-primary hover:text-primary transition bg-white dark:bg-gray-800"
                                    >
                                        6s
                                    </button>
                                    <button
                                        type="button"
                                        data-duration="10"
                                        class="duration-btn py-1 px-2 rounded-full text-xs font-medium border border-gray-100 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:border-primary hover:text-primary transition bg-white dark:bg-gray-800"
                                    >
                                        10s
                                    </button>
                                </div>
                            </div>

                            <!-- Generate Button -->
                            <button id="generate-btn" class="flex-1 relative flex items-center justify-center px-4 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:before:scale-95">
                                <span class="relative text-sm font-semibold text-white">Generate</span>
                            </button>
                        </div>
                    </div>

                    <!-- Right Column: Video Player / Result -->
                    <div class="lg:col-span-2 flex flex-col overflow-hidden h-full">
                        <div class="border border-gray-100 dark:border-gray-700 rounded-3xl overflow-hidden bg-white dark:bg-gray-800 h-full flex flex-col">
                            <div class="flex-1 bg-gradient-to-br from-gray-100 to-gray-50 dark:from-gray-800 dark:to-gray-900 flex items-center justify-center relative overflow-hidden">
                                <div id="video-player" class="text-center space-y-4">
                                    <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <p class="text-gray-500 dark:text-gray-400 text-sm">
                                        Your generated video will appear here
                                    </p>
                                </div>

                                <!-- Download Button - Floating in corner -->
                                <button id="download-btn" class="hidden absolute top-3 right-3 p-2 rounded-full bg-white dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-600 transition shadow-lg" title="Download">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                    </svg>
                                </button>
                            </div>

                            <!-- Video Info Section -->
                            <div id="video-info" class="hidden p-3 border-t border-gray-100 dark:border-gray-700 space-y-2 flex-shrink-0">
                                <h3 id="video-title" class="text-sm font-semibold text-gray-900 dark:text-white">
                                    Generated Video
                                </h3>
                                <div class="flex gap-2">
                                    <button class="flex-1 relative flex h-8 items-center justify-center px-3 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:before:scale-95">
                                        <span class="relative text-xs font-semibold text-white">Download</span>
                                    </button>
                                    <button class="flex-1 relative flex h-8 items-center justify-center px-3 before:absolute before:inset-0 before:rounded-full before:border before:border-transparent before:bg-primary/10 before:transition before:duration-300 hover:before:scale-105 dark:before:bg-gray-700">
                                        <span class="relative text-xs font-semibold text-primary dark:text-white">Share</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</AppLayout>

<script>
    // Character counter
    const promptInput = document.getElementById('prompt') as HTMLTextAreaElement;
    const charCount = document.getElementById('char-count') as HTMLElement;

    if (promptInput) {
        promptInput.addEventListener('input', () => {
            charCount.textContent = promptInput.value.length.toString();
        });
    }

    // Duration buttons
    const durationBtns = document.querySelectorAll('.duration-btn') as NodeListOf<HTMLButtonElement>;
    let selectedDuration = null;

    durationBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            durationBtns.forEach(b => {
                b.classList.remove('bg-primary', 'text-white', 'border-primary');
                b.classList.add('border-gray-100', 'dark:border-gray-700', 'text-gray-700', 'dark:text-gray-300');
            });
            btn.classList.remove('border-gray-100', 'dark:border-gray-700', 'text-gray-700', 'dark:text-gray-300');
            btn.classList.add('bg-primary', 'text-white', 'border-primary');
            selectedDuration = btn.dataset.duration;
        });
    });

    // Image upload preview
    const imageUpload = document.getElementById('image-upload') as HTMLInputElement;
    const imagePreview = document.getElementById('image-preview') as HTMLImageElement;
    const uploadPlaceholder = document.getElementById('upload-placeholder') as HTMLElement;

    if (imageUpload) {
        imageUpload.addEventListener('change', (e) => {
            const file = (e.target as HTMLInputElement).files?.[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (event) => {
                    imagePreview.src = event.target?.result as string;
                    imagePreview.classList.remove('hidden');
                    uploadPlaceholder.classList.add('hidden');
                };
                reader.readAsDataURL(file);
            }
        });
    }

    // Generate button logic
    const generateBtn = document.getElementById('generate-btn') as HTMLButtonElement;
    const videoPlayer = document.getElementById('video-player') as HTMLElement;
    const videoInfo = document.getElementById('video-info') as HTMLElement;
    const downloadBtn = document.getElementById('download-btn') as HTMLButtonElement;

    if (generateBtn) {
        generateBtn.addEventListener('click', () => {
            const hasImage = !uploadPlaceholder.classList.contains('hidden') === false;
            const hasPrompt = promptInput.value.trim().length > 0;
            const hasDuration = selectedDuration !== null;

            if (hasImage && hasPrompt && hasDuration) {
                // Hide placeholder, show download button
                videoPlayer.classList.add('hidden');
                videoInfo.classList.remove('hidden');
                downloadBtn.classList.remove('hidden');
            }
        });
    }

    // Download button functionality
    if (downloadBtn) {
        downloadBtn.addEventListener('click', () => {
            // Placeholder for actual download logic
            alert('Download functionality coming soon!');
        });
    }
</script>

      video: `/gallery/${folder}/video.mp4`,
      title: title || undefined, // –ü—É—Å—Ç–∞—è —Å—Ç—Ä–æ–∫–∞ —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è undefined
    });

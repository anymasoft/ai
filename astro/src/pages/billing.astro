---
import Container from '../components/Container.astro';
import AppLayout from '../layouts/AppLayout.astro';
---

<AppLayout title="Billing - Video Reader AI">
	<div class="w-full h-full flex flex-col overflow-hidden">
		<div class="flex-1 overflow-y-auto">
			<div class="p-6 md:p-8">
				<div class="max-w-2xl mx-auto text-center space-y-6">
					<h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white">
						Upgrade Your Account
					</h1>
					<p class="text-lg text-gray-600 dark:text-gray-300">
						Buy more credits to continue generating videos
					</p>

					<div class="mt-12 grid md:grid-cols-2 gap-6">
						<div class="border border-gray-100 dark:border-gray-700 rounded-3xl p-8 bg-white dark:bg-gray-800 text-left hover:shadow-2xl hover:shadow-gray-600/10 transition">
							<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
								Starter Pack
							</h3>
							<p class="text-gray-600 dark:text-gray-300 mb-6">
								Perfect for trying out
							</p>
							<p class="text-4xl font-bold text-primary mb-6">
								$9
							</p>
							<ul class="space-y-3 mb-8 text-gray-600 dark:text-gray-300">
								<li class="flex items-center gap-3">
									<span class="text-primary">✓</span>
									<span>10 video credits</span>
								</li>
								<li class="flex items-center gap-3">
									<span class="text-primary">✓</span>
									<span>Up to 60 seconds each</span>
								</li>
								<li class="flex items-center gap-3">
									<span class="text-primary">✓</span>
									<span>Standard quality</span>
								</li>
							</ul>
							<button class="w-full relative flex h-11 items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:before:scale-95">
								<span class="relative text-base font-semibold text-white">Coming Soon</span>
							</button>
						</div>

						<div class="border-2 border-primary rounded-3xl p-8 bg-white dark:bg-gray-800 text-left relative hover:shadow-2xl hover:shadow-gray-600/10 transition">
							<div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-primary text-white px-4 py-1 rounded-full text-sm font-semibold">
								Most Popular
							</div>
							<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
								Pro Pack
							</h3>
							<p class="text-gray-600 dark:text-gray-300 mb-6">
								For serious creators
							</p>
							<p class="text-4xl font-bold text-primary mb-6">
								$29
							</p>
							<ul class="space-y-3 mb-8 text-gray-600 dark:text-gray-300">
								<li class="flex items-center gap-3">
									<span class="text-primary">✓</span>
									<span>50 video credits</span>
								</li>
								<li class="flex items-center gap-3">
									<span class="text-primary">✓</span>
									<span>Up to 120 seconds each</span>
								</li>
								<li class="flex items-center gap-3">
									<span class="text-primary">✓</span>
									<span>Premium quality</span>
								</li>
								<li class="flex items-center gap-3">
									<span class="text-primary">✓</span>
									<span>Priority processing</span>
								</li>
							</ul>
							<button class="w-full relative flex h-11 items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:before:scale-95">
								<span class="relative text-base font-semibold text-white">Coming Soon</span>
							</button>
						</div>
					</div>

					<div class="mt-12 text-center text-gray-600 dark:text-gray-300">
						<p>
							Payment processing coming soon. For now, enjoy <strong>5 free credits</strong> to get started!
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</AppLayout>

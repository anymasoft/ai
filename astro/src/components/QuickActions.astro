---
// QuickActions.astro - Mode Selector
// Переключатель режимов: Template vs Prompt
// Первая кнопка выбрана по умолчанию
---

<div class="flex items-center justify-center gap-2 w-full">
  <!-- Template Mode Button -->
  <button
    id="mode-template"
    data-mode="template"
    class="mode-toggle-btn mode-toggle-active flex-1 flex items-center justify-center gap-2
           px-4 py-2 rounded-lg
           font-medium text-sm
           transition-all duration-200"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16m10-16v16M3 8h18M3 16h18"></path>
    </svg>
    <span>Рекламный шаблон</span>
  </button>

  <!-- Prompt Mode Button -->
  <button
    id="mode-prompt"
    data-mode="prompt"
    class="mode-toggle-btn flex-1 flex items-center justify-center gap-2
           px-4 py-2 rounded-lg
           font-medium text-sm
           transition-all duration-200"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>
    <span>Свободный сценарий</span>
  </button>
</div>

<style>
  .mode-toggle-btn {
    border: 1px solid #e2e8f0;
    background-color: white;
    color: #475569;
    cursor: pointer;
  }

  .dark .mode-toggle-btn {
    border-color: #334155;
    background-color: #0f172a;
    color: #cbd5e1;
  }

  /* Inactive state */
  .mode-toggle-btn:hover:not(.mode-toggle-active) {
    background-color: #f1f5f9;
    border-color: #cbd5e1;
  }

  .dark .mode-toggle-btn:hover:not(.mode-toggle-active) {
    background-color: #1e293b;
    border-color: #475569;
  }

  /* Active state */
  .mode-toggle-active {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
    border-color: #3b82f6;
    color: #1e40af;
  }

  .dark .mode-toggle-active {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(59, 130, 246, 0.1) 100%);
    border-color: #3b82f6;
    color: #60a5fa;
  }

  .mode-toggle-btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .mode-toggle-btn svg {
    flex-shrink: 0;
  }
</style>

<script>
  // Mode toggle logic
  const modeButtons = document.querySelectorAll('.mode-toggle-btn');

  modeButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons
      modeButtons.forEach(btn => btn.classList.remove('mode-toggle-active'));

      // Add active class to clicked button
      button.classList.add('mode-toggle-active');

      const mode = button.getAttribute('data-mode');

      // Dispatch custom event for parent component
      window.dispatchEvent(new CustomEvent('modeChanged', {
        detail: { mode }
      }));

      console.log(`[MODE] Switched to: ${mode}`);
    });
  });
</script>


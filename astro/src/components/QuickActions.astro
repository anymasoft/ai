---
// QuickActions.astro - Mode Selector
// Переключатель режимов: Template vs Prompt
// Первая кнопка выбрана по умолчанию
// С shadcn-style тултипами при наведении
---

<div class="flex items-center justify-center gap-2 w-full">
  <!-- Template Mode Button -->
  <button
    id="mode-template"
    data-mode="template"
    data-tooltip="ИИ сам подберёт сценарий и создаст продающее видео для WB и Ozon"
    class="mode-toggle-btn mode-toggle-active flex-1 flex items-center justify-center gap-2
           px-4 py-2 rounded-lg
           font-medium text-sm
           transition-all duration-200
           relative"
  >
    <span>Рекламный шаблон</span>
  </button>

  <!-- Prompt Mode Button -->
  <button
    id="mode-prompt"
    data-mode="prompt"
    data-tooltip="Вы управляете сценой и камерой, как режиссёр"
    class="mode-toggle-btn flex-1 flex items-center justify-center gap-2
           px-4 py-2 rounded-lg
           font-medium text-sm
           transition-all duration-200
           relative"
  >
    <span>Свободный сценарий</span>
  </button>
</div>

<style>
  .mode-toggle-btn {
    border: 1px solid #e2e8f0;
    background-color: white;
    color: #475569;
    cursor: pointer;
  }

  .dark .mode-toggle-btn {
    border-color: #334155;
    background-color: #0f172a;
    color: #cbd5e1;
  }

  /* Inactive state */
  .mode-toggle-btn:hover:not(.mode-toggle-active) {
    background-color: #f1f5f9;
    border-color: #cbd5e1;
  }

  .dark .mode-toggle-btn:hover:not(.mode-toggle-active) {
    background-color: #1e293b;
    border-color: #475569;
  }

  /* Active state */
  .mode-toggle-active {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
    border-color: #3b82f6;
    color: #1e40af;
  }

  .dark .mode-toggle-active {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(59, 130, 246, 0.1) 100%);
    border-color: #3b82f6;
    color: #60a5fa;
  }

  .mode-toggle-btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  /* Shadcn-style Tooltip */
  .mode-toggle-btn::before {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-8px);
    background-color: rgba(31, 41, 55, 0.95);
    color: rgba(243, 244, 246, 0.85);
    padding: 0.5rem 0.75rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    max-width: 200px;
    white-space: normal;
    word-wrap: break-word;
    text-align: center;
    line-height: 1.3;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease, visibility 0.2s ease;
    visibility: hidden;
    z-index: 50;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .dark .mode-toggle-btn::before {
    background-color: rgba(243, 244, 246, 0.95);
    color: rgba(31, 41, 55, 0.85);
  }

  /* Tooltip arrow */
  .mode-toggle-btn::after {
    content: '';
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-4px);
    width: 0;
    height: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 4px solid rgba(31, 41, 55, 0.95);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    visibility: hidden;
    z-index: 50;
  }

  .dark .mode-toggle-btn::after {
    border-top-color: rgba(243, 244, 246, 0.95);
  }

  /* Tooltip show on hover */
  .mode-toggle-btn:hover::before,
  .mode-toggle-btn:hover::after {
    opacity: 1;
    visibility: visible;
  }
</style>

<script>
  // Mode toggle logic
  const modeButtons = document.querySelectorAll('.mode-toggle-btn');

  modeButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove active class from all buttons
      modeButtons.forEach(btn => btn.classList.remove('mode-toggle-active'));

      // Add active class to clicked button
      button.classList.add('mode-toggle-active');

      const mode = button.getAttribute('data-mode');

      // Dispatch custom event for parent component
      window.dispatchEvent(new CustomEvent('modeChanged', {
        detail: { mode }
      }));

      console.log(`[MODE] Switched to: ${mode}`);
    });
  });
</script>


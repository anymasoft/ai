---
// QuickActionButton.astro
// Основано на Tailus Button компоненте
// https://tailus.io/components

interface Props {
  icon?: string; // SVG или иконка
  label: string;
  onClick?: string;
  variant?: 'default' | 'outline' | 'ghost';
}

const { icon, label, onClick, variant = 'outline' } = Astro.props;

const baseClasses = `
  flex items-center gap-2
  px-4 py-2 rounded-full
  font-medium text-sm
  transition-all duration-200
  focus:outline-none focus:ring-2 focus:ring-offset-2
  active:scale-95
  cursor-pointer
`;

const variantClasses = {
  default: `
    bg-blue-600 text-white
    hover:bg-blue-700
    focus:ring-blue-500 focus:ring-offset-white
    dark:focus:ring-offset-slate-950
  `,
  outline: `
    border border-slate-200 dark:border-slate-700
    bg-white dark:bg-slate-950
    text-slate-700 dark:text-slate-300
    hover:bg-slate-50 dark:hover:bg-slate-900
    focus:ring-slate-500 focus:ring-offset-white
    dark:focus:ring-offset-slate-950
  `,
  ghost: `
    text-slate-600 dark:text-slate-400
    hover:bg-slate-100 dark:hover:bg-slate-800
    focus:ring-slate-500 focus:ring-offset-white
    dark:focus:ring-offset-slate-950
  `,
};
---

<button
  class={`${baseClasses} ${variantClasses[variant]}`}
  onClick={onClick}
>
  {icon && (
    <span class="flex-shrink-0" set:html={icon} />
  )}
  <span>{label}</span>
</button>

<style>
  button {
    -webkit-font-smoothing: antialiased;
  }

  button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>

{
  "manifest_version": 3,
  "name": "YouTube Transcript Viewer",
  "version": "2.0.3",
  "description": "Показывает субтитры YouTube с предварительной обработкой",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}

{
  "manifest_version": 3,
  "name": "YouTube Transcript Viewer",
  "version": "3.4.0",
  "description": "Premium YouTube transcript translation with multi-language support",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["flags.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vr_logo_small.png", "assets/logo.png"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}

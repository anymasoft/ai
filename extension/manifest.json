{
  "manifest_version": 3,
  "name": "Video Reader AI",
  "version": "6.0.0",
  "description": "Instant YouTube subtitle translation with AI. OAuth authentication with Google.",
  "key": "",
  "permissions": [
    "storage",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Video Reader AI - Login",
    "default_icon": {
      "16": "vr_logo_small.png",
      "48": "vr_logo_small.png",
      "128": "vr_logo_small.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "auth.html",
        "style.css",
        "vr_logo_small.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "CLIENT_ID_HERE.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  }
}

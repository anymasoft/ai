{
  "manifest_version": 3,
  "name": "Video Reader AI",
  "version": "3.5.7",
  "description": "Instant YouTube subtitle translation with AI. Translate, download, and sync subtitles in any language.",
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Video Reader AI",
    "default_icon": {
      "16": "vr_logo_small.png",
      "48": "vr_logo_small.png",
      "128": "vr_logo_small.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["flags.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "vr_logo_small.png",
        "assets/logo.png",
        "tailwind.css",
        "index.html",
        "style.css",
        "script.js",
        "images/google.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
